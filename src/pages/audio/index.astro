---
import Site from "../../layouts/Site.astro";
import { guidedAudios } from "../../data/generated";
---

<Site
    title="Guided Audios Â· Tulaa"
    description="Gentle voice-guided sessions for calm, focus, and rest."
>
    <main class="wrap" style="max-width:940px;margin:0 auto;padding:24px;">
        <h1 class="ga-title">Guided Audios</h1>

        <ul style="list-style:none;padding:0;display:grid;gap:12px;">
            {
                guidedAudios.map((a) => (
                    <li style="border:1px solid var(--ring);border-radius:14px;padding:12px;">
                        <a
                            href={`/audio/${a.slug}`}
                            style="text-decoration:none;color:inherit;"
                        >
                            <div style="display:flex;gap:12px;align-items:center;">
                                <img
                                    src={a.image}
                                    alt={a.title}
                                    width="96"
                                    height="54"
                                    loading="lazy"
                                    style="border-radius:8px;object-fit:cover;"
                                />
                                <div>
                                    <h3 class="ga-item-title">{a.title}</h3>
                                    <p class="ga-item-sub">{a.teaser}</p>
                                </div>
                            </div>
                        </a>
                    </li>
                ))
            }
        </ul>
    </main>
</Site>

<style>
    .ga-title {
        margin: 0 0 12px;
        font-family: var(--font-sans);
        font-size: var(--fs-h2);
        font-weight: var(--fw-bold);
        color: var(--fg);
    }

    .ga-item-title {
        margin: 0 0 6px;
        font-family: var(--font-sans);
        font-size: var(--fs-h4);
        font-weight: var(--fw-semibold);
        color: var(--fg);
    }

    .ga-item-sub {
        margin: 0;
        font-family: var(--font-sans);
        font-size: var(--fs-body);
        color: var(--muted);
        line-height: var(--lh-body);
    }
</style>
