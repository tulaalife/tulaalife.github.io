---
import Site from "../../layouts/Site.astro";
import { guidedAudios } from "../../data/generated";

const displayAudios = guidedAudios.filter((a) => a.language === "en");

const title = "Guided Audios";
const description = "Gentle voice-guided sessions for calm, focus, and rest.";
---

<Site
    title={`${title} · Tulaa`}
    description={description}
    canonicalPath="/audio"
>
    <div class="listing-container">
        <div class="listing-header">
            <h1 class="page-title">{title}</h1>
            <p class="page-subtitle">{description}</p>
        </div>

        <div class="audio-grid">
            {
                displayAudios.map((a) => (
                    <a
                        href={`/audio/${a.slug}`}
                        class="audio-card"
                        aria-label={`Listen to ${a.title}`}
                    >
                        <div class="audio-cover">
                            <img
                                src={a.image}
                                alt={a.title}
                                loading="lazy"
                                decoding="async"
                            />
                            <div class="play-overlay">
                                <div class="play-button">▶</div>
                            </div>
                        </div>

                        <div class="audio-content">
                            <h3 class="audio-title">{a.title}</h3>
                            <p class="audio-desc">{a.teaser}</p>
                        </div>
                    </a>
                ))
            }
        </div>
    </div>
</Site>

<style>
    /* =========================================
       SHARED LISTING STYLE (Yoga Aligned)
    ========================================= */

    .listing-container {
        max-width: var(--container-width);
        margin: 0 auto;
        padding: 60px 24px 80px;
    }

    .listing-header {
        text-align: center;
        margin-bottom: 60px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .page-title {
        font-size: var(--text-display);
        margin-bottom: 16px;
        letter-spacing: -0.02em;
        line-height: 1.1;
    }

    .page-subtitle {
        font-size: 1.15rem;
        color: var(--text-muted);
        line-height: 1.5;
    }

    /* =========================================
       GRID
    ========================================= */

    .audio-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 32px;
    }

    /* =========================================
       CARD
    ========================================= */

    .audio-card {
        display: flex;
        flex-direction: column;
        background: var(--bg-sub);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease,
            border-color 0.3s ease;
        height: 100%;
    }

    .audio-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow);
        border-color: color-mix(in srgb, var(--primary), transparent 70%);
    }

    /* =========================================
       COVER
    ========================================= */

    .audio-cover {
        position: relative;
        aspect-ratio: 1 / 1;
        overflow: hidden;
        border-bottom: 1px solid var(--border);
        background: var(--bg-main);
    }

    .audio-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .audio-card:hover .audio-cover img {
        transform: scale(1.06);
    }

    /* Play Overlay */
    .play-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.25);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .audio-card:hover .play-overlay {
        opacity: 1;
    }

    .play-button {
        width: 54px;
        height: 54px;
        background: white;
        color: black;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        padding-left: 4px;
        transform: scale(0.85);
        transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        box-shadow: 0 6px 18px rgba(0, 0, 0, 0.25);
    }

    .audio-card:hover .play-button {
        transform: scale(1);
    }

    /* =========================================
       CONTENT
    ========================================= */

    .audio-content {
        padding: 24px;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .audio-title {
        font-size: 1.25rem;
        font-weight: var(--fw-bold);
        margin-bottom: 8px;
        line-height: 1.2;
        letter-spacing: -0.01em;
    }

    .audio-desc {
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.6;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex-grow: 1;
    }

    /* =========================================
       MOBILE
    ========================================= */

    @media (max-width: 600px) {
        .listing-container {
            padding: 40px 20px 60px;
        }

        .audio-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
