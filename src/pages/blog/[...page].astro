---
import Site from "../../layouts/Site.astro";
import { blogPosts } from "../../data/generated";
import type { Page, GetStaticPaths } from "astro";

interface Props {
    page: Page<(typeof blogPosts)[number]>;
}

export const getStaticPaths = (async ({ paginate }) => {
    const englishPosts = blogPosts.filter(
        (p) => !p.language || p.language === "en",
    );

    const sortedPosts = [...englishPosts].sort(
        (a, b) => new Date(b.date).getTime() - new Date(a.date).getTime(),
    );

    return paginate(sortedPosts, { pageSize: 12 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;

const title = "Wellness Blog";
const description =
    "Insights on yoga, sleep, and mindful living from Tulaa experts.";

const formatDate = (isoString: string) => {
    return new Date(isoString).toLocaleDateString("en-US", {
        month: "short",
        day: "numeric",
        year: "numeric",
    });
};
---

<Site
    title={`${title} · Page ${page.currentPage}`}
    description={description}
    canonicalPath={page.url.current}
>
    <div class="listing-container">
        <div class="listing-header">
            <h1 class="page-title">{title}</h1>
            <p class="page-subtitle">{description}</p>
        </div>

        <div class="blog-grid">
            {
                page.data.map((post) => (
                    <a href={`/blog/${post.slug}`} class="blog-card">
                        <div class="blog-thumb">
                            <img
                                src={post.image}
                                alt={post.title}
                                loading="lazy"
                                decoding="async"
                            />
                        </div>

                        <div class="blog-content">
                            <span class="blog-date">
                                {formatDate(post.date)}
                            </span>

                            <h3 class="blog-title-sm">{post.title}</h3>

                            <p class="blog-excerpt">{post.excerpt}</p>

                            <div class="blog-footer">
                                <span class="blog-more">Read Article →</span>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        {
            page.lastPage > 1 && (
                <nav class="pagination" aria-label="Pagination">
                    {page.url.prev ? (
                        <a href={page.url.prev} class="btn-pill">
                            ← Previous
                        </a>
                    ) : (
                        <span class="btn-pill disabled">← Previous</span>
                    )}

                    <span class="page-meta">
                        Page {page.currentPage} / {page.lastPage}
                    </span>

                    {page.url.next ? (
                        <a href={page.url.next} class="btn-pill">
                            Next →
                        </a>
                    ) : (
                        <span class="btn-pill disabled">Next →</span>
                    )}
                </nav>
            )
        }
    </div>
</Site>

<style>
    /* =========================================
       SHARED LISTING LAYOUT
    ========================================= */

    .listing-container {
        max-width: var(--container-width);
        margin: 0 auto;
        padding: 60px 24px 80px;
    }

    .listing-header {
        text-align: center;
        margin-bottom: 60px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .page-title {
        font-size: var(--text-display);
        margin-bottom: 16px;
        letter-spacing: -0.02em;
        line-height: 1.1;
    }

    .page-subtitle {
        font-size: 1.15rem;
        color: var(--text-muted);
        line-height: 1.5;
    }

    /* =========================================
       GRID
    ========================================= */

    .blog-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
        gap: 32px;
        margin-bottom: 60px;
    }

    /* =========================================
       CARD
    ========================================= */

    .blog-card {
        display: flex;
        flex-direction: column;
        background: var(--bg-sub);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease,
            border-color 0.3s ease;
        height: 100%;
    }

    .blog-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow);
        border-color: color-mix(in srgb, var(--primary), transparent 70%);
    }

    /* =========================================
       IMAGE
    ========================================= */

    .blog-thumb {
        position: relative;
        aspect-ratio: 16 / 9;
        overflow: hidden;
        border-bottom: 1px solid var(--border);
        background: var(--bg-main);
    }

    .blog-thumb img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .blog-card:hover .blog-thumb img {
        transform: scale(1.05);
    }

    /* =========================================
       CONTENT
    ========================================= */

    .blog-content {
        padding: 24px;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .blog-date {
        font-size: 0.85rem;
        color: var(--text-muted);
        margin-bottom: 8px;
    }

    .blog-title-sm {
        font-size: 1.25rem;
        font-weight: var(--fw-bold);
        margin-bottom: 8px;
        line-height: 1.2;
        letter-spacing: -0.01em;
    }

    .blog-excerpt {
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.6;
        margin-bottom: 20px;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex-grow: 1;
    }

    .blog-footer {
        margin-top: auto;
    }

    .blog-more {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--primary);
        transition: transform 0.2s ease;
    }

    .blog-card:hover .blog-more {
        transform: translateX(4px);
    }

    /* =========================================
       PAGINATION
    ========================================= */

    .pagination {
        margin-top: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
    }

    .page-meta {
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    .btn-pill {
        display: inline-flex;
        align-items: center;
        padding: 10px 20px;
        border-radius: 999px;
        font-size: 0.95rem;
        text-decoration: none;
        color: var(--text-main);
        background: var(--bg-main);
        border: 1px solid var(--border);
        transition: all 0.2s ease;
    }

    .btn-pill:not(.disabled):hover {
        border-color: var(--primary);
        color: var(--primary);
        background: var(--bg-sub);
    }

    .btn-pill.disabled {
        opacity: 0.4;
        cursor: default;
        background: transparent;
    }

    /* =========================================
       MOBILE
    ========================================= */

    @media (max-width: 600px) {
        .listing-container {
            padding: 40px 20px 60px;
        }

        .blog-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
