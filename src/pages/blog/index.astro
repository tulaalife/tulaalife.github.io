---
import Site from "../../layouts/Site.astro";
import { blogPosts } from "../../data/generated";

// --- Configuration ---
const PER_PAGE = 12;
const page = Number(Astro.url.searchParams.get("page") ?? 1);

// Sort by Date (Newest First)
const sortedPosts = [...blogPosts].sort(
    (a, b) => new Date(b.date).getTime() - new Date(a.date).getTime(),
);

const start = (page - 1) * PER_PAGE;
const items = sortedPosts.slice(start, start + PER_PAGE);
const totalPages = Math.max(1, Math.ceil(sortedPosts.length / PER_PAGE));

const title = "Wellness Blog";
const description =
    "Insights on yoga, sleep, and mindful living from Tulaa experts.";

// Helper: Format Date (e.g., "Mar 15, 2024")
const formatDate = (isoString: string) => {
    return new Date(isoString).toLocaleDateString("en-US", {
        month: "short",
        day: "numeric",
        year: "numeric",
    });
};
---

<Site
    title={`${title} · Tulaa`}
    description={description}
    canonicalPath="/blog"
>
    <main class="wrap blog-container">
        <header class="blog-header">
            <h1 class="blog-title">{title}</h1>
            <p class="blog-subtitle">{description}</p>
        </header>

        <div class="blog-grid">
            {
                items.map((post) => (
                    <article class="blog-card">
                        <a href={`/blog/${post.slug}`} class="blog-link">
                            <div class="blog-thumb-frame">
                                <img
                                    src={post.image}
                                    alt={post.title}
                                    loading="lazy"
                                    decoding="async"
                                />
                            </div>

                            <div class="blog-content">
                                <div class="blog-meta">
                                    <span class="blog-date">
                                        {formatDate(post.date)}
                                    </span>
                                    {post.language === "hi" && (
                                        <span class="badge-lang">Hindi</span>
                                    )}
                                </div>
                                <h3 class="blog-item-title">{post.title}</h3>
                                <p class="blog-item-desc">{post.excerpt}</p>
                                <span class="blog-more">Read Article →</span>
                            </div>
                        </a>
                    </article>
                ))
            }
        </div>

        {
            totalPages > 1 && (
                <nav class="blog-pagination" aria-label="Pagination">
                    {page > 1 ? (
                        <a href={`/blog?page=${page - 1}`} class="btn-pill">
                            ← Previous
                        </a>
                    ) : (
                        <span class="btn-pill disabled">← Previous</span>
                    )}
                    <span class="page-meta">
                        Page {page} of {totalPages}
                    </span>
                    {page < totalPages ? (
                        <a href={`/blog?page=${page + 1}`} class="btn-pill">
                            Next →
                        </a>
                    ) : (
                        <span class="btn-pill disabled">Next →</span>
                    )}
                </nav>
            )
        }
    </main>
</Site>

<style>
    .blog-container {
        max-width: var(--container);
        margin: 0 auto;
        padding: 24px 20px 64px;
    }

    .blog-header {
        text-align: center;
        margin-bottom: 48px;
        padding-top: 20px;
    }
    .blog-title {
        font-size: var(--fs-display);
        letter-spacing: -0.02em;
        margin-bottom: 8px;
    }
    .blog-subtitle {
        font-size: var(--fs-body-lg);
        color: var(--muted);
        max-width: 600px;
        margin: 0 auto;
    }

    /* Grid Layout */
    .blog-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 24px;
    }
    @media (min-width: 800px) {
        .blog-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    /* Card Styles */
    .blog-card {
        background: var(--card);
        border: 1px solid var(--ring);
        border-radius: 20px;
        overflow: hidden;
        transition:
            transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1),
            box-shadow 0.3s ease,
            border-color 0.3s ease;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02);
    }
    .blog-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--elev-2);
        border-color: color-mix(in oklch, var(--accent), transparent 70%);
    }

    .blog-link {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column; /* Stack vertically on mobile */
        height: 100%;
    }
    @media (min-width: 500px) {
        .blog-link {
            flex-direction: row; /* Side-by-side on desktop/tablet */
        }
    }

    /* Image Thumbnail */
    .blog-thumb-frame {
        position: relative;
        overflow: hidden;
        background: color-mix(in oklch, var(--bg1), grey 5%);
        aspect-ratio: 16/9; /* Default for mobile stack */
    }
    @media (min-width: 500px) {
        .blog-thumb-frame {
            width: 150px;
            flex-shrink: 0;
            aspect-ratio: auto;
            border-right: 1px solid
                color-mix(in oklch, var(--ring), transparent 50%);
        }
    }
    .blog-thumb-frame img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }
    .blog-card:hover .blog-thumb-frame img {
        transform: scale(1.05);
    }

    /* Content */
    .blog-content {
        padding: 20px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        flex: 1;
    }

    .blog-meta {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 8px;
        font-size: var(--fs-caption);
        color: var(--muted);
        font-weight: var(--fw-medium);
    }
    .badge-lang {
        background: color-mix(in oklch, var(--accent), transparent 90%);
        color: var(--accent);
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 0.7rem;
        text-transform: uppercase;
    }

    .blog-item-title {
        font-size: clamp(1.15rem, 1.5vw, 1.3rem);
        margin: 0 0 8px;
        line-height: 1.25;
        color: var(--fg);
    }

    .blog-item-desc {
        font-size: var(--fs-body-sm);
        color: var(--muted);
        line-height: 1.5;
        margin: 0 0 16px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .blog-more {
        font-size: var(--fs-caption);
        font-weight: var(--fw-bold);
        color: var(--accent);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-top: auto;
    }

    /* Pagination */
    .blog-pagination {
        margin-top: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 16px;
    }
    .page-meta {
        font-size: var(--fs-caption);
        color: var(--muted);
    }
    .btn-pill {
        padding: 8px 16px;
        border-radius: 999px;
        font-size: var(--fs-body-sm);
        text-decoration: none;
        color: var(--fg);
        border: 1px solid var(--ring);
        transition: all 0.2s;
    }
    .btn-pill:not(.disabled):hover {
        background: var(--card);
        border-color: var(--accent);
    }
    .btn-pill.disabled {
        opacity: 0.4;
        cursor: default;
        border-color: transparent;
    }
</style>
