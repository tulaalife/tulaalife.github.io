---
// src/pages/404.astro
import Site from "../layouts/Site.astro";
import CTAButton from "../components/CTAButton.astro";

const title = "Page not found · Tulaa";
const description =
    "This page doesn’t exist. Open the Tulaa app or explore yoga plans, guided audios, and wellness tips.";
---

<Site title={title} description={description} canonicalPath="/404">
    <main class="nf-wrap">
        <section class="nf-card" aria-labelledby="nf-title">
            <p class="nf-tag">404 — Not found</p>
            <h1 id="nf-title" class="nf-title">We couldn’t find that page</h1>
            <p class="nf-body">
                The link you followed doesn’t match a live page yet.&nbsp;You
                can go back home, or jump straight into yoga plans, guided
                audios, or health tips.
            </p>

            <div class="nf-actions">
                <CTAButton
                    href="/"
                    label="Go to Tulaa home"
                    variant="solid"
                    size="lg"
                />
                <CTAButton
                    href="/yoga"
                    label="Browse yoga plans"
                    variant="soft"
                    size="md"
                />
                <CTAButton
                    href="/audio"
                    label="Guided audios"
                    variant="soft"
                    size="md"
                />
                <CTAButton
                    href="/tips"
                    label="Health tips"
                    variant="soft"
                    size="md"
                />
            </div>

            <p class="nf-sub">
                If you tapped a link inside the app, make sure you have the
                latest version of Tulaa installed.
            </p>
        </section>
    </main>
</Site>

<style>
    .nf-wrap {
        max-width: 980px;
        margin: 0 auto;
        padding: 40px 24px 56px;
        box-sizing: border-box;
    }

    .nf-card {
        border-radius: var(--radius-xl);
        padding: clamp(24px, 4vw, 32px);
        background: radial-gradient(
                120% 150% at 0% 0%,
                color-mix(in oklch, var(--accent-2), transparent 88%),
                transparent 60%
            ),
            linear-gradient(
                180deg,
                color-mix(in oklch, var(--card), white 6%),
                color-mix(in oklch, var(--card), transparent 4%)
            );
        border: 1px solid color-mix(in oklch, var(--ring), transparent 18%);
        box-shadow: var(--elev-2);
        backdrop-filter: blur(18px) saturate(1.03);
        text-align: left;
    }

    .nf-tag {
        margin: 0 0 6px;
        font-size: var(--fs-caption);
        font-weight: var(--fw-medium);
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--muted);
    }

    .nf-title {
        margin: 0 0 10px;
        font-family: var(--font-sans);
        font-size: var(--fs-h1);
        font-weight: var(--fw-semibold);
        line-height: var(--lh-title);
    }

    .nf-body {
        margin: 0 0 18px;
        font-size: var(--fs-body);
        color: var(--fg);
    }

    .nf-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 8px;
        margin-bottom: 12px;
    }

    .nf-sub {
        margin: 8px 0 0;
        font-size: var(--fs-body-sm);
        color: var(--muted);
    }

    @media (max-width: 640px) {
        .nf-wrap {
            padding-top: 28px;
        }
        .nf-card {
            padding: 20px 18px 24px;
        }
    }
</style>
