---
import Site from "../../layouts/Site.astro";
import CTAButton from "../../components/CTAButton.astro";
import { yogaPlans } from "../../data/generated";

export async function getStaticPaths() {
    return yogaPlans.map((p) => ({
        params: { slug: p.slug },
        props: { plan: p },
    }));
}

const { plan } = Astro.props;
const canonical = `/yoga/${plan.slug}`;
---

<Site
    title={`${plan.title} · Yoga Plan · Tulaa`}
    description={plan.teaser ||
        plan.subtitle ||
        "Gentle preview of this Tulaa yoga plan."}
    canonicalPath={canonical}
>
    <main class="content-shell">
        <article class="home-block plan-card">
            <nav class="plan-nav">
                <a href="/yoga" class="back-link">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path d="m15 18-6-6 6-6"></path>
                    </svg>
                    Back to Plans
                </a>
            </nav>

            <header class="plan-header">
                <h1 class="plan-title">{plan.title}</h1>
                {plan.subtitle && <p class="plan-subtitle">{plan.subtitle}</p>}
            </header>

            <div class="image-frame">
                <img
                    src={plan.image}
                    alt={plan.title}
                    width="1200"
                    height="630"
                    loading="eager"
                />
            </div>

            <div class="plan-body">
                {plan.teaser && <p class="plan-lead">{plan.teaser}</p>}

                {
                    plan.benefits && (
                        <div class="benefits-module">
                            <h3 class="benefits-label">
                                <span class="icon">✦</span> Key Benefits
                            </h3>
                            <p class="benefits-text">{plan.benefits}</p>
                        </div>
                    )
                }
            </div>

            <footer class="plan-footer">
                <p class="app-note">Available exclusively in the Tulaa App</p>
                <div class="button-group">
                    <CTAButton
                        href="https://apps.apple.com/app/id6748626498"
                        label="Open in App"
                        variant="solid"
                        size="md"
                    />
                    <CTAButton
                        href="/yoga"
                        label="Browse other plans"
                        variant="soft"
                        size="md"
                    />
                </div>
            </footer>
        </article>
    </main>
</Site>

<style>
    /* Layout Wrapper */
    .content-shell {
        width: 100%;
        max-width: 860px; /* Optimal reading width */
        margin: 0 auto;
        padding: 0 16px;
    }

    .plan-card {
        display: flex;
        flex-direction: column;
        gap: clamp(24px, 4vw, 32px);
        /* The .home-block class from Layout handles the glass background/border */
    }

    /* Navigation */
    .plan-nav {
        display: flex;
        align-items: center;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: var(--fs-body-sm);
        font-weight: var(--fw-medium);
        color: var(--muted);
        text-decoration: none;
        transition:
            color 0.2s ease,
            transform 0.2s ease;
    }
    .back-link:hover {
        color: var(--accent);
        transform: translateX(-2px);
    }

    /* Typography */
    .plan-header {
        text-align: center;
        margin: 0 auto;
        max-width: 650px;
    }

    .plan-title {
        font-size: clamp(1.8rem, 4vw, 2.5rem);
        line-height: 1.1;
        letter-spacing: -0.02em;
        margin-bottom: 12px;
        /* A subtle gradient on the text can add a premium touch */
        background: linear-gradient(
            180deg,
            var(--fg) 0%,
            color-mix(in oklch, var(--fg), transparent 20%) 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .plan-subtitle {
        font-size: var(--fs-body-lg); /* Slightly larger than standard body */
        color: var(--muted);
        font-weight: var(--fw-regular);
        line-height: 1.4;
    }

    /* Image Styling */
    .image-frame {
        width: 100%;
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid var(--ring);
        box-shadow: var(--elev-2);
        position: relative;
    }

    .image-frame img {
        width: 100%;
        height: auto;
        aspect-ratio: 16/9;
        object-fit: cover;
        display: block;
        transition: transform 0.7s ease;
    }

    /* Subtle zoom effect on load/hover could go here if desired */

    /* Content Styling */
    .plan-body {
        max-width: 68ch; /* Optimal character width for reading */
        margin: 0 auto;
    }

    .plan-lead {
        font-size: 1.15rem; /* Lead paragraph size */
        line-height: 1.6;
        color: var(--fg);
        margin-bottom: 32px;
    }

    /* Benefits Module */
    .benefits-module {
        background: color-mix(in oklch, var(--accent), transparent 94%);
        border: 1px solid color-mix(in oklch, var(--accent), transparent 85%);
        border-radius: 16px;
        padding: 24px;
        position: relative;
    }

    .benefits-label {
        font-size: var(--fs-caption);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--accent);
        font-weight: var(--fw-bold);
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .benefits-text {
        font-size: var(--fs-body);
        color: var(--fg);
        line-height: 1.6;
        opacity: 0.9;
    }

    /* Footer / Actions */
    .plan-footer {
        margin-top: 16px;
        padding-top: 24px;
        border-top: 1px solid var(--ring);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 16px;
        text-align: center;
    }

    .app-note {
        font-size: var(--fs-caption);
        color: var(--muted);
        font-style: italic;
    }

    .button-group {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        justify-content: center;
    }
</style>
