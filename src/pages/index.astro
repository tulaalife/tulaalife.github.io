    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.12);
    background: color-mix(in oklch, var(--fg), black 5%);
  }

  /* Subtle button (Secondary/Ghost) */
  .btn--subtle {
    background: transparent;
    color: var(--fg);
    border: 1px solid var(--ring);
  }
  .btn--subtle:hover {
    background: var(--card);
    border-color: var(--accent);
  }

  /* * Animation: Reveal 
   * Using a slightly slower, smoother curve
   */
  .reveal {
    opacity: 0;
    transform: translateY(20px);
    animation: elevate-in 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
  }

  .reveal:nth-child(1) {
    animation-delay: 0.1s;
  }
  .reveal:nth-child(2) {
    animation-delay: 0.25s;
  }
  .reveal:nth-child(3) {
    animation-delay: 0.4s;
  }
  .reveal:nth-child(4) {
    animation-delay: 0.55s;
  }
  .reveal:nth-child(5) {
    animation-delay: 0.7s;
  }

  @keyframes elevate-in {
    from {
      opacity: 0;
      transform: translateY(24px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .reveal {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>
