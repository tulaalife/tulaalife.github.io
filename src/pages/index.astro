    }

    .ctaRow {
      margin: 18px 0 6px;
      display: flex;
      gap: 12px;
      justify-content: center;
      flex-wrap: wrap;
    }

    .cta {
      display: inline-block;
      padding: 14px 18px;
      border-radius: 14px;
      text-decoration: none;
      border: 1px solid var(--ring);
      font-weight: 600;
    }

    .cta.primary {
      background: var(--btn);
      color: var(--btnText);
      border-color: transparent;
    }

    .cta.secondary {
      background: transparent;
      color: var(--fg);
    }

    .cta:focus-visible {
      outline: 3px solid var(--accent);
      outline-offset: 2px;
    }

    footer {
      margin-top: 10px;
      font-size: 12px;
      color: var(--muted);
    }

    footer a {
      color: inherit;
    }

    @keyframes fade {
      from {
        opacity: 0;
        transform: translateY(12px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media (prefers-reduced-motion: reduce) {
      .wrap {
        animation: none;
