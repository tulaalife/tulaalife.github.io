<style>
  /* =========================================
       LOCAL STYLES FOR LANDING PAGE
       ========================================= */

  /* --- General Utils --- */
  .text-gradient {
    background: linear-gradient(
      135deg,
      var(--primary),
      color-mix(in srgb, var(--primary), black 20%)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .section {
    padding: 100px 0;
  }
  .bg-subtle {
    background-color: var(--bg-sub);
  }
  .feature-img {
    width: 100%;
    height: auto;
    border-radius: var(--radius-lg);
  }
  .shadow-lg {
    box-shadow: var(--shadow);
  }
  .max-w-md {
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* --- Sticky Nav --- */
  .sticky-nav {
    position: fixed;
    top: -80px; /* Hidden initially */
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
    z-index: 99;
    transition: top 0.3s ease;
  }
  :global([data-theme="dark"]) .sticky-nav {
    background: rgba(20, 20, 20, 0.9);
  }

  .sticky-nav.visible {
    top: 0;
  }

  .sticky-inner {
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .sticky-logo {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 600;
  }
  .btn-sm {
    background: var(--primary);
    color: var(--primary-fg);
    padding: 8px 16px;
    border-radius: 99px;
    font-size: 0.9rem;
    font-weight: 500;
    transition: transform 0.2s;
  }
  .btn-sm:hover {
    transform: scale(1.05);
  }

  /* --- Hero Section --- */
  .hero-section {
    padding-top: 140px; /* Account for fixed header */
    padding-bottom: 80px;
    overflow: hidden;
  }
  .hero-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 60px;
    align-items: center;
  }
  .badge {
    display: inline-block;
    padding: 6px 12px;
    border-radius: 99px;
    background: var(--bg-sub);
    color: var(--primary);
    font-weight: 600;
    font-size: 0.85rem;
    margin-bottom: 24px;
    border: 1px solid var(--border);
  }
  .hero-title {
    font-size: var(--text-display);
    line-height: 1.1;
    margin-bottom: 24px;
  }
  .hero-sub {
    font-size: 1.2rem;
    color: var(--text-muted);
    margin-bottom: 40px;
    max-width: 500px;
  }
  .trust-pill {
    margin-top: 32px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 0.9rem;
    color: var(--text-muted);
    background: var(--bg-sub);
    padding: 8px 16px;
    border-radius: 99px;
  }
  .dot {
    width: 8px;
    height: 8px;
    background-color: #22c55e;
    border-radius: 50%;
  }

  /* Video/Phone Frame */
  .phone-frame-wrapper {
    position: relative;
    width: 300px;
    margin: 0 auto;
    z-index: 2;
  }
  .app-video {
    width: 100%;
    border-radius: 40px; /* Approximate iPhone corner radius */
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    border: 8px solid #333; /* Simple CSS Bezel if image fails */
    aspect-ratio: 9/19.5;
    object-fit: cover;
  }
  :global([data-theme="dark"]) .app-video {
    border-color: #111;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
  }

  .glow-blob {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 80%;
    background: var(--primary);
    filter: blur(80px);
    opacity: 0.2;
    z-index: -1;
  }

  /* --- Feature Sections --- */
  .grid-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }
  .section-title {
    font-size: var(--text-h1);
    margin-bottom: 24px;
  }
  .body-text {
    font-size: var(--text-body);
    color: var(--text-muted);
    margin-bottom: 32px;
  }
  .feature-list {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }
  .feature-item {
    display: flex;
    gap: 16px;
    align-items: flex-start;
  }
  .check {
    color: var(--primary);
    font-weight: bold;
    font-size: 1.2rem;
    margin-top: -2px;
  }

  /* Tools Grid */
  .tools-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
  }
  .tool-card {
    background: var(--bg-main);
    padding: 20px;
    border-radius: 16px;
    border: 1px solid var(--border);
  }
  .tool-card .emoji {
    font-size: 1.5rem;
    display: block;
    margin-bottom: 8px;
  }
  .tool-card strong {
    display: block;
    margin-bottom: 4px;
  }
  .tool-card p {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin: 0;
  }

  /* Mind & Mood */
  .center-text {
    text-align: center;
    margin-bottom: 60px;
  }
  .wide-visual {
    max-width: 900px;
    margin: 0 auto;
  }

  /* Privacy */
  .section-privacy {
    text-align: center;
  }
  .privacy-box {
    background: var(--bg-sub);
    padding: 60px 20px;
    border-radius: var(--radius-lg);
    max-width: 800px;
    margin: 0 auto;
  }
  .lock-icon {
    color: var(--primary);
    margin-bottom: 20px;
  }
  .privacy-list {
    list-style: none;
    padding: 0;
    margin-top: 40px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 16px 32px;
  }
  .privacy-list li {
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  /* CTA Section */
  .cta-card {
    background: linear-gradient(
      135deg,
      var(--primary),
      color-mix(in srgb, var(--primary), white 40%)
    );
    padding: 80px 20px;
    border-radius: 32px;
    text-align: center;
    color: white;
  }
  :global([data-theme="dark"]) .cta-card {
    background: linear-gradient(
      135deg,
      var(--primary),
      color-mix(in srgb, var(--primary), black 60%)
    );
  }
  .cta-title {
    color: white;
    margin-bottom: 16px;
    font-size: var(--text-h1);
  }
  .cta-sub {
    opacity: 0.9;
    font-size: 1.2rem;
    margin-bottom: 40px;
  }
  .legal-line {
    margin-top: 60px;
    font-size: 0.8rem;
    opacity: 0.6;
  }

  /* Store Buttons */
  .store-buttons {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }
  .store-buttons.centered {
    justify-content: center;
  }

  .store-btn {
    display: flex;
    align-items: center;
    gap: 10px;
    background: var(--text-main);
    color: var(--bg-main);
    padding: 10px 20px;
    border-radius: 12px;
    transition:
      transform 0.2s,
      opacity 0.2s;
    min-width: 160px;
  }
  .store-btn.inverted {
    background: white;
    color: black;
  }
  :global([data-theme="dark"]) .store-btn.inverted {
    background: black;
    color: white;
  }

  .store-btn:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }
  .store-btn .icon {
    font-size: 1.5rem;
    line-height: 1;
  }
  .store-btn .text {
    display: flex;
    flex-direction: column;
    line-height: 1.1;
  }
  .store-btn .small {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  .store-btn .large {
    font-size: 1rem;
    font-weight: 600;
  }

  /* --- Responsive --- */
  @media (max-width: 768px) {
    .hero-grid,
    .grid-layout {
      grid-template-columns: 1fr;
      text-align: center;
      gap: 40px;
    }
    .reverse-mobile {
      display: flex;
      flex-direction: column-reverse;
    }

    .hero-content {
      order: 2;
    }
    .hero-visual {
      order: 1;
      margin-bottom: 20px;
    }

    .store-buttons {
      justify-content: center;
    }
    .feature-item {
      justify-content: flex-start;
      text-align: left;
    }

    /* Center text on mobile but keep lists aligned left */
    .text-col {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .feature-list,
    .tools-grid {
      width: 100%;
      text-align: left;
    }
  }
</style>

<script>
  // Sticky Nav Logic
  const nav = document.getElementById("sticky-nav");
  const hero = document.querySelector(".hero-section");

  if (nav && hero) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          // If hero is NOT intersecting (scrolled past), show nav
          if (!entry.isIntersecting) {
            nav.classList.add("visible");
          } else {
            nav.classList.remove("visible");
          }
        });
      },
      { threshold: 0.1 },
    ); // Trigger when 10% of hero is visible

    observer.observe(hero);
  }
</script>
