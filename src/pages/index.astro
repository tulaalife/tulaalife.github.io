<style>
  /* Page layout rhythm */
  :root {
    --wrap: min(100%, calc(var(--container) + 0px));
    /* responsive spacing scale */
    --vspace-sm: clamp(12px, 1.6vw, 16px);
    --vspace-md: clamp(20px, 2.5vw, 28px);
    --vspace-lg: clamp(32px, 4vw, 48px);
    --vspace-xl: clamp(24px, 2vw, 40px);
    --hairline: color-mix(in oklab, var(--ring) 70%, transparent);
  }

  /* Standard section block */
  .section {
    width: min(100%, var(--container));
    margin-inline: auto;
    padding-block: var(--vspace-md) var(--vspace-lg);
    position: relative;
  }

  /* Structured separation between blocks */
  .section + .section {
    margin-top: var(--vspace-xl);
    padding-top: var(--vspace-xl);
    border-top: 1px dashed var(--hairline);
  }

  /* HERO has its own spacing so it breathes */
  .hero {
    position: relative;
    width: var(--wrap);
    margin: var(--vspace-sm) auto 0;
    padding-block: var(--vspace-lg) var(--vspace-md);
    isolation: isolate;
  }

  /* Let sections decide spacing: remove inner margins from children here */
  .section :where(.peek, .ts-wrap, .more) {
    margin: 0; /* kill internal margins so parent rhythm wins */
  }

  /* Optional: small buffer under each componentâ€™s own header to align content */
  .section :where(.peek__head, .ts-header) {
    margin-bottom: var(--vspace-sm);
  }

  /* Buttons (unchanged, kept for page parity) */
  .btn {
    display: inline-block;
    padding: 12px 16px;
    border-radius: 999px;
    text-decoration: none;
    font-weight: 650;
    font-size: var(--fs-body-sm);
    letter-spacing: 0.01em;
    transition:
      transform 0.18s ease,
      box-shadow 0.18s ease,
      opacity 0.18s ease;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.06);
  }
  .btn--solid {
    background: var(--btn);
    color: var(--btnText);
  }
  .btn--solid:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
  }
  .btn--solid:active {
    transform: none;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
  }

  /* Reveal animation (unchanged) */
  .reveal {
    opacity: 0;
    transform: translateY(10px);
    animation: float-up 0.6s ease-out both;
  }
  .reveal:nth-of-type(2) {
    animation-delay: 0.04s;
  }
  .reveal:nth-of-type(3) {
    animation-delay: 0.08s;
  }
  .reveal:nth-of-type(4) {
    animation-delay: 0.12s;
  }
  @media (prefers-reduced-motion: reduce) {
    .reveal {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
  @keyframes float-up {
    to {
      opacity: 1;
      transform: none;
    }
  }
</style>
