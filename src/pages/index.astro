      border-radius: 16px;
      padding: 14px 16px;
      max-width: 680px;
    }

    .featureTitle {
      margin: 0 0 8px;
      font-size: 16px;
      color: var(--muted);
    }

    ul.features {
      margin: 0;
      padding-left: 18px;
      line-height: 1.7;
    }

    ul.features li {
