<style>
  /* Layout helpers match tokens from layout */
  :root {
    --wrap: min(100%, calc(var(--container) + 0px));
  }

  .section {
    margin: 32px auto;
    width: var(--wrap);
  }
  .ctaRow {
    text-align: center;
    margin-top: 12px;
  }

  /* Premium hero with soft ambient glow */
  .hero {
    position: relative;
    margin: 6px auto 6px;
    width: var(--wrap);
    isolation: isolate;
  }
  .hero__ambient {
    position: absolute;
    inset: -24px;
    border-radius: 28px;
    filter: blur(28px);
    z-index: -1;
    background: radial-gradient(
        600px 380px at 20% 10%,
        color-mix(in oklch, var(--accent), white 65%),
        transparent 60%
      ),
      radial-gradient(
        600px 420px at 85% 20%,
        color-mix(in oklch, var(--bg2), var(--accent) 20%),
        transparent 62%
      ),
      linear-gradient(
        180deg,
        transparent,
        color-mix(in oklch, var(--bg1), white 6%)
      );
    opacity: 0.7;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 12px 16px;
    border-radius: 999px;
    text-decoration: none;
    font-weight: 650;
    letter-spacing: 0.01em;
    transition:
      transform 0.18s ease,
      box-shadow 0.18s ease,
      opacity 0.18s ease;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.06);
  }
  .btn--solid {
    background: var(--btn);
    color: var(--btnText);
  }
  .btn--solid:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
  }
  .btn--solid:active {
    transform: translateY(0);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.06);
  }

  /* Reveal animation (respects reduced-motion) */
  .reveal {
    opacity: 0;
    transform: translateY(10px);
    animation: float-up 0.6s ease-out both;
  }
  .reveal:nth-of-type(2) {
    animation-delay: 0.04s;
  }
  .reveal:nth-of-type(3) {
    animation-delay: 0.08s;
  }
  .reveal:nth-of-type(4) {
    animation-delay: 0.12s;
  }
  @media (prefers-reduced-motion: reduce) {
    .reveal {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
  @keyframes float-up {
    to {
      opacity: 1;
      transform: none;
    }
  }
</style>
