---
import Site from "../../layouts/Site.astro";
import { marked } from "marked"; // Run 'npm install marked' if missing

// Import the local MD file directly using Vite's '?raw' suffix.
// NOTE: You must manually download 'privacy_en.md' from R2 and save it as 'src/data/privacy.md'
import privacyMd from "../../data/privacy.md?raw";

const title = "Tulaa — Privacy Policy";
const description =
    "Tulaa Privacy Policy — local-only logs, optional anonymous analytics with PostHog, no PII.";

// Processing the imported markdown
// 1. Remove the first line (# Title) because we render a custom H1 with Logo below.
const rawMarkdown = privacyMd.replace(/^# .+\n/, "");

// 2. Parse Markdown to HTML
const contentHtml = await marked.parse(rawMarkdown);
---

<Site
    title={title}
    description={description}
    canonicalPath="/legal/privacy"
    hideFooter={true}
>
    <main class="legal-wrap">
        <!-- Custom Header with Logo (Kept from original) -->
        <h1 class="legal-title">
            <img
                src="https://images.tulaa.life/logo.webp"
                alt="Tulaa logo"
                width="48"
                height="48"
                class="legal-logo"
            />
            Tulaa — Privacy Policy
        </h1>

        <!-- Content from Local MD File -->
        <div class="markdown-body" set:html={contentHtml} />

        <p class="legal-meta">
            <a href="/legal/terms">Terms of Use</a> · Need help?
            <a href="mailto:contact@tulaalife.com">contact@tulaalife.com</a>
        </p>

        <script type="application/ld+json" is:inline>
            {
                "@context": "https://schema.org",
                "@type": "WebPage",
                "name": "Tulaa — Privacy Policy",
                "url": "https://tulaalife.com/legal/privacy",
                "datePublished": "2025-09-16"
            }
        </script>
    </main>
</Site>

<style is:global>
    /* Use is:global or :global() to style the injected HTML content */

    .legal-wrap {
        max-width: 940px;
        margin: 0 auto;
        padding: 24px;
        font-family: var(--font-sans);
    }

    .legal-title {
        display: flex;
        align-items: center;
        gap: 8px;
        margin: 12px 0 24px;
        font-size: 1.9rem;
        font-weight: 750;
    }

    .legal-logo {
        vertical-align: middle;
        border-radius: 8px;
    }

    .legal-meta {
        color: var(--muted);
        font-size: 0.9rem;
        margin: 28px 0 18px;
        border-top: 1px solid var(--ring);
        padding-top: 20px;
    }

    /* --- Markdown Styles --- */

    .markdown-body h2 {
        margin-top: 28px;
        margin-bottom: 12px;
        font-size: 1.35rem;
        font-weight: 700;
        color: var(--foreground);
    }

    .markdown-body p,
    .markdown-body ul,
    .markdown-body li {
        font-size: 1rem;
        line-height: 1.6;
        margin-bottom: 12px;
        color: var(--foreground);
    }

    .markdown-body ul {
        padding-left: 24px;
    }

    .markdown-body li {
        margin-bottom: 6px;
    }

    .markdown-body strong {
        font-weight: 600;
    }

    /* Convert Markdown Blockquotes (>) into your "Legal Box" style */
    .markdown-body blockquote {
        background: var(--card);
        border: 1px solid var(--ring);
        padding: 16px 18px;
        border-radius: 14px;
        margin: 18px 0;
        /* Reset default blockquote margins */
        margin-inline-start: 0;
        margin-inline-end: 0;
    }

    .markdown-body blockquote p {
        margin-bottom: 0; /* Remove bottom margin inside box */
    }

    .markdown-body a {
        color: var(--primary);
        text-decoration: underline;
        text-underline-offset: 4px;
    }
</style>
