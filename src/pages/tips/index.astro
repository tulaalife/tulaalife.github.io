---
import Site from "../../layouts/Site.astro";
import { tips } from "../../data/generated"; // limited, shuffled 10 tips
---

<Site
    title="Wellness Tips Â· Tulaa"
    description="Short wellness insights and self-care reminders from Tulaa."
    canonicalPath="/tips"
>
    <main class="wrap" style="max-width:840px;margin:0 auto;padding:24px;">
        <h1 style="margin:0 0 12px;">Health & Wellness Tips</h1>

        <ul
            style="
        list-style:none;
        padding:0;
        display:grid;
        gap:14px;
        margin:0;
      "
            aria-label="List of wellness tips"
        >
            {
                tips.map((t) => (
                    <li
                        style="
              border:1px solid var(--ring);
              border-radius:14px;
              padding:14px;
              background:var(--card);
              transition:transform 0.2s ease, box-shadow 0.2s ease;
            "
                    >
                        <a
                            href={`/tips/${t.slug}`}
                            style="text-decoration:none;color:inherit;display:flex;gap:12px;align-items:center;"
                        >
                            <div style="font-size:1.6rem;flex-shrink:0;">
                                {t.icon ?? "ðŸ’¡"}
                            </div>
                            <div>
                                <h3 style="margin:0 0 4px;font-size:1.05rem;">
                                    {t.tip}
                                </h3>
                                <p style="margin:0;color:var(--muted);font-size:0.9rem;line-height:1.4;">
                                    {t.benefit}
                                </p>
                            </div>
                        </a>
                    </li>
                ))
            }
        </ul>

        <!-- Single CTA below the list -->
        <div
            style="
        margin-top:28px;
        display:flex;
        justify-content:center;
      "
        >
            <a
                href="tulaa://tips"
                style="
          padding:12px 20px;
          border:1px solid var(--ring);
          border-radius:12px;
          text-decoration:none;
          font-weight:600;
          background:var(--btn);
          color:var(--btnText);
        "
            >
                Open full tips library in Tulaa app
            </a>
        </div>
    </main>
</Site>
