---
import Site from "../../layouts/Site.astro";
import CTAButton from "../../components/CTAButton.astro";
import { tips } from "../../data/generated";

const title = "Wellness Tips";
const description = "Daily insights, self-care reminders, and health rhythms.";
---

<Site
    title={`${title} Â· Tulaa`}
    description={description}
    canonicalPath="/tips"
>
    <div class="listing-container">
        <div class="listing-header">
            <h1 class="page-title">{title}</h1>
            <p class="page-subtitle">{description}</p>
        </div>

        <div class="tips-grid">
            {
                tips.map((t) => (
                    <a href={`/tips/${t.slug}`} class="tip-card">
                        <div class="tip-icon">{t.icon ?? "ðŸ’¡"}</div>

                        <div class="tip-content">
                            <h3 class="tip-heading">{t.tip}</h3>
                            <p class="tip-preview">{t.benefit}</p>

                            <div class="tip-footer">
                                <span class="tip-read-more">Read more â†’</span>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        <div class="tips-footer-cta">
            <p class="cta-label">Looking for personalized daily tips?</p>

            <CTAButton
                href="https://apps.apple.com/app/id6748626498"
                label="Open Tulaa App"
                variant="solid"
                size="md"
            />
        </div>
    </div>
</Site>

<style>
    /* =========================================
       SHARED LISTING LAYOUT (Aligned)
    ========================================= */

    .listing-container {
        max-width: var(--container-width);
        margin: 0 auto;
        padding: 60px 24px 80px;
    }

    .listing-header {
        text-align: center;
        margin-bottom: 60px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .page-title {
        font-size: var(--text-display);
        margin-bottom: 16px;
        letter-spacing: -0.02em;
        line-height: 1.1;
    }

    .page-subtitle {
        font-size: 1.15rem;
        color: var(--text-muted);
        line-height: 1.5;
    }

    /* =========================================
       GRID
    ========================================= */

    .tips-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
        gap: 32px;
        margin-bottom: 60px;
    }

    /* =========================================
       CARD
    ========================================= */

    .tip-card {
        display: flex;
        flex-direction: column;
        gap: 20px;
        background: var(--bg-sub);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        padding: 28px;
        text-decoration: none;
        color: inherit;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease,
            border-color 0.3s ease;
        height: 100%;
    }

    .tip-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow);
        border-color: color-mix(in srgb, var(--primary), transparent 70%);
    }

    /* Icon */
    .tip-icon {
        width: 48px;
        height: 48px;
        font-size: 1.4rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        background: var(--bg-main);
        border: 1px solid var(--border);
    }

    /* Content */
    .tip-content {
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .tip-heading {
        font-size: 1.15rem;
        font-weight: var(--fw-bold);
        line-height: 1.3;
        margin-bottom: 8px;
        letter-spacing: -0.01em;
    }

    .tip-preview {
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.6;
        margin-bottom: 20px;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex-grow: 1;
    }

    .tip-footer {
        margin-top: auto;
    }

    .tip-read-more {
        font-size: 0.85rem;
        font-weight: 600;
        color: var(--primary);
        transition: transform 0.2s ease;
    }

    .tip-card:hover .tip-read-more {
        transform: translateX(4px);
    }

    /* =========================================
       FOOTER CTA
    ========================================= */

    .tips-footer-cta {
        text-align: center;
        padding-top: 40px;
        border-top: 1px solid var(--border);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 16px;
    }

    .cta-label {
        font-size: 1rem;
        color: var(--text-muted);
        margin: 0;
    }

    /* =========================================
       MOBILE
    ========================================= */

    @media (max-width: 600px) {
        .listing-container {
            padding: 40px 20px 60px;
        }

        .tips-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
