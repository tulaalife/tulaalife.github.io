---
interface Props {
    title: string;
    description?: string;
    canonicalPath?: string; // e.g. "/" or "/legal/privacy"
    ogImage?: string;
}

const {
    title,
    description = "Yoga, meditation, journaling, rhythms and care â€” privacy-first, ad-free, offline-ready.",
    canonicalPath = "/",
    ogImage = "https://images.tulaa.life/logo.webp",
} = Astro.props;

const site = "https://tulaalife.com";
const url = new URL(canonicalPath, site).toString();
---

<!doctype html>
<html lang="en" data-theme="light">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={url} />

        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Tulaa" />
        <meta property="og:url" content={url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImage} />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImage} />

        <link
            rel="icon"
            href="https://images.tulaa.life/favicon.ico"
            sizes="any"
        />
        <link
            rel="apple-touch-icon"
            href="https://images.tulaa.life/apple-touch-icon.png"
        />

        <!-- Optional: SoftwareApplication structured data -->
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "SoftwareApplication",
                "name": "Tulaa",
                "applicationCategory": "HealthApplication",
                "operatingSystem": "iOS, Android",
                "offers": {
                    "@type": "Offer",
                    "price": "0",
                    "priceCurrency": "USD"
                },
                "description": "Yoga, meditation, journaling, rhythms and care â€” privacy-first, ad-free, offline-ready."
            }
        </script>

        <style>
            /* ---- Global safety + reset (prevents horizontal scroll) ---- */
            *,
            *::before,
            *::after {
                box-sizing: border-box;
            }
            html,
            body {
                width: 100%;
                overflow-x: hidden;
            }
            img,
            video,
            svg,
            canvas {
                max-width: 100%;
                height: auto;
                display: block;
            }
            :root {
                -webkit-text-size-adjust: 100%;
                text-size-adjust: 100%;
            }

            :root {
                --bg1: #f6eef3;
                --bg2: #eaf4f4;
                --fg: #1f1f23;
                --muted: #5c5c66;
                --accent: #8a6fa0;
                --card: #ffffffcc;
                --ring: #00000014;
                --btn: #1f1f23;
                --btnText: #fff;
            }
            [data-theme="dark"] {
                --bg1: #0f1013;
                --bg2: #1a1b20;
                --fg: #eaeaf0;
                --muted: #a3a3b1;
                --accent: #b48dff;
                --card: #1c1d22cc;
                --ring: #ffffff14;
                --btn: #eaeaf0;
                --btnText: #0f1013;
            }

            html,
            body {
                height: 100%;
                margin: 0;
            }
            body {
                font-family:
                    ui-sans-serif,
                    system-ui,
                    -apple-system,
                    Segoe UI,
                    Roboto,
                    Helvetica,
                    Arial;
                color: var(--fg);
                background: radial-gradient(
                        1200px 800px at 20% 0%,
                        var(--bg1),
                        transparent 60%
                    ),
                    radial-gradient(
                        1200px 900px at 100% 20%,
                        var(--bg2),
                        transparent 60%
                    ),
                    linear-gradient(135deg, var(--bg1), var(--bg2));
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }

            header {
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 14px 24px;
                backdrop-filter: blur(8px);
                background: var(--card);
                border-bottom: 1px solid var(--ring);
                position: sticky;
                top: 0;
                z-index: 10;
            }
            header .brand {
                display: flex;
                align-items: center;
                gap: 10px;
                font-weight: 600;
                font-size: 1.1rem;
                text-decoration: none;
                color: var(--fg);
            }
            header img {
                width: 28px;
                height: 28px;
                border-radius: 6px;
            }
            nav a {
                color: var(--fg);
                text-decoration: none;
                margin-left: 16px;
                font-size: 0.95rem;
                opacity: 0.9;
            }
            nav a:hover {
                opacity: 1;
                text-decoration: underline;
            }

            button.theme-toggle {
                border: 1px solid var(--ring);
                background: var(--card);
                border-radius: 50%;
                width: 34px;
                height: 34px;
                font-size: 18px;
                cursor: pointer;
                color: var(--fg);
            }

            main {
                flex: 1;
                /* Avoid vw math + padding overflow. Use full width with max-width. */
                width: 100%;
                max-width: 920px;
                margin: 24px auto;
                padding: 28px 16px;
                background: var(--card);
                backdrop-filter: blur(8px);
                border-radius: 24px;
                border: 1px solid var(--ring);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
                animation: fade 700ms ease-out both;
            }

            footer {
                width: 100%;
                padding: 32px 24px;
                text-align: center;
                color: var(--muted);
            }
            footer .download-card {
                width: 100%;
                max-width: 920px;
                margin: 0 auto 16px;
                background: var(--card);
                border: 1px solid var(--ring);
                border-radius: 16px;
                padding: 16px;
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 12px;
            }
            footer .buttons {
                display: flex;
                gap: 12px;
                flex-wrap: wrap;
                justify-content: center;
            }
            footer .buttons a {
                text-decoration: none;
                border-radius: 10px;
                padding: 8px 14px;
                font-weight: 500;
                background: var(--btn);
                color: var(--btnText);
            }
            footer .legal {
                margin-top: 12px;
                display: flex;
                gap: 14px;
                justify-content: center;
                flex-wrap: wrap;
                font-size: 12px;
            }
            footer .legal a {
                color: var(--muted);
                text-decoration: none;
            }
            footer .legal a:hover {
                text-decoration: underline;
            }

            @keyframes fade {
                from {
                    opacity: 0;
                    transform: translateY(12px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        </style>

        <script src="/src/scripts/theme-toggle.js" is:inline></script>
    </head>

    <body>
        <header>
            <a class="brand" href="/" aria-label="Tulaa home">
                <img
                    src="https://images.tulaa.life/logo.webp"
                    alt="Tulaa logo"
                />
                <span>Tulaa</span>
            </a>
            <div style="display:flex; align-items:center; gap:12px;">
                <nav aria-label="Site">
                    <!-- Add top-level links here if needed -->
                    <!-- <a href="/plans">Plans</a> -->
                </nav>
                <button
                    class="theme-toggle"
                    onclick="toggleTheme()"
                    aria-label="Toggle theme">ðŸŒ“</button
                >
            </div>
        </header>

        <main>
            <slot />
        </main>

        <footer>
            <div class="download-card" aria-label="Download Tulaa app">
                <h3 style="margin:0;">Download the Tulaa App</h3>
                <p
                    style="margin:4px 0 10px;color:var(--muted);font-size:0.95rem;"
                >
                    Your calm companion â€” yoga, meditation & journaling.
                    Ad-free. Offline-ready. Privacy-first.
                </p>
                <div class="buttons">
                    <a
                        href="https://apps.apple.com/in/app/tulaa/id6748626498"
                        target="_blank"
                        rel="noopener">ï£¿ App Store</a
                    >
                    <a
                        href="https://play.google.com/store/apps/details?id=life.tulaa"
                        target="_blank"
                        rel="noopener">â–¶ Play Store</a
                    >
                </div>
            </div>

            <p style="margin-top:10px;font-size:12px;color:var(--muted);">
                Â© {new Date().getFullYear()} Tulaalife Wellness Private Limited
                Â· All rights reserved.
            </p>
            <div class="legal" aria-label="Legal and contact">
                <a href="/legal/privacy">Privacy Policy</a>
                <a href="/legal/terms">Terms of Use</a>
                <a href="mailto:support@tulaa.life">Contact Us</a>
            </div>
        </footer>
    </body>
</html>
