---
import IntroCard from "../components/IntroCard.astro";

interface Props {
    title: string;
    description?: string;
    canonicalPath?: string;
    ogImage?: string;
    hideFooter?: boolean;
}

const {
    title,
    description = "Yoga, meditation, journaling, rhythms and care ‚Äî privacy-first, ad-free, offline-ready.",
    canonicalPath = "/",
    ogImage = "https://images.tulaa.life/logo.webp",
    hideFooter = false,
} = Astro.props;

const site = "https://tulaalife.com";
const url = new URL(canonicalPath, site).toString();
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="color-scheme" content="light dark" />

        <!-- Updated theme-colors to match new palette -->
        <meta
            name="theme-color"
            media="(prefers-color-scheme: light)"
            content="#f5f2f8"
        />
        <meta
            name="theme-color"
            media="(prefers-color-scheme: dark)"
            content="#14161a"
        />

        <meta name="robots" content="index,follow" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={url} />

        <!-- Open Graph / Twitter -->
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Tulaa" />
        <meta property="og:url" content={url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImage} />
        <meta
            property="og:image:alt"
            content="Tulaa ‚Äî yoga, meditation & journaling"
        />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImage} />
        <meta
            name="twitter:image:alt"
            content="Tulaa ‚Äî yoga, meditation & journaling"
        />

        <!-- Favicons -->
        <link
            rel="icon"
            href="https://images.tulaa.life/favicon.ico"
            sizes="any"
        />
        <link
            rel="apple-touch-icon"
            href="https://images.tulaa.life/apple-touch-icon.png"
        />

        <!-- perf -->
        <link rel="preconnect" href="https://images.tulaa.life" crossorigin />

        <!-- Smart App Banner -->
        <meta
            name="apple-itunes-app"
            content="app-id=6748626498, app-argument=https://tulaalife.com"
        />

        <!-- Early theme -->
        <script is:inline>
            (() => {
                const root = document.documentElement;

                function applyTheme(theme) {
                    root.dataset.theme = theme;
                    root.style.colorScheme = theme;
                }

                try {
                    const saved = localStorage.getItem("tulaa-theme");
                    const initial =
                        saved === "dark" || saved === "light" ? saved : "light";
                    applyTheme(initial);
                } catch {
                    applyTheme("light");
                }

                // Expose toggle on window
                // @ts-ignore
                window.toggleTheme = function toggleTheme() {
                    const current =
                        root.dataset.theme === "dark" ? "dark" : "light";
                    const next = current === "dark" ? "light" : "dark";
                    applyTheme(next);
                    try {
                        localStorage.setItem("tulaa-theme", next);
                    } catch {}
                };
            })();
        </script>

        <!-- Variable font -->
        <link
            rel="preload"
            as="font"
            type="font/woff2"
            href="/fonts/InterVariable.woff2"
            crossorigin
        />
        <style>
            @font-face {
                font-family: "Inter Var";
                src:
                    local("InterVariable"),
                    local("Inter Variable"),
                    url("/fonts/InterVariable.woff2") format("woff2");
                font-weight: 100 900;
                font-stretch: 75% 125%;
                font-style: normal;
                font-display: swap;
                size-adjust: 105%;
            }
        </style>

        <!-- Structured data -->
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "SoftwareApplication",
                "name": "Tulaa",
                "applicationCategory": "HealthApplication",
                "operatingSystem": "iOS, Android",
                "offers": {
                    "@type": "Offer",
                    "price": "0",
                    "priceCurrency": "USD"
                },
                "description": "Yoga, meditation, journaling, rhythms and care ‚Äî privacy-first, ad-free, offline-ready."
            }
        </script>

        <style>
            /* ---------- Base & tokens (OKLCH-tuned) ---------- */
            *,
            *::before,
            *::after {
                box-sizing: border-box;
            }
            html,
            body {
                width: 100%;
                height: 100%;
                margin: 0;
                overflow-x: hidden;
            }
            html {
                -webkit-font-smoothing: antialiased;
            }
            :root {
                -webkit-text-size-adjust: 100%;
                text-size-adjust: 100%;
            }

            :root {
                /* Light ‚Äî Sunrise Iris (brighter) */
                --bg1: oklch(98% 0.045 300); /* airy violet */
                --bg2: oklch(96% 0.06 240); /* cool cyan tint */
                --fg: oklch(22% 0.04 255); /* richer ink */
                --muted: oklch(48% 0.05 255);
                --accent: oklch(70% 0.18 285); /* vivid iris */
                --accent-2: oklch(
                    78% 0.14 35
                ); /* warm sunrise (peach/orange) */
                --card: oklch(100% 0 0 / 0.86);
                --ring: oklch(40% 0 0 / 0.12);
                --btn: var(--fg);
                --btnText: white;

                --radius-xl: 24px;
                --container: 980px;
                --elev-1: 0 6px 18px rgba(10, 12, 16, 0.08);
                --elev-2: 0 12px 28px rgba(10, 12, 16, 0.12);
                --elev-3: 0 18px 46px rgba(10, 12, 16, 0.14);

                /* Font family: Inter everywhere */
                --font-sans: "Inter Var", system-ui, -apple-system,
                    BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial,
                    sans-serif;

                /* TYPOGRAPHY SCALE */
                --fw-regular: 400;
                --fw-medium: 500;
                --fw-semibold: 600;
                --fw-bold: 700;

                --fs-display: clamp(2.2rem, 3.1vw, 2.8rem);
                --fs-h1: clamp(1.7rem, 2.3vw, 2.1rem);
                --fs-h2: clamp(1.35rem, 1.8vw, 1.6rem);
                --fs-body: 0.98rem;
                --fs-body-sm: 0.9rem;
                --fs-caption: 0.78rem;

                --lh-tight: 1.2;
                --lh-title: 1.24;
                --lh-body: 1.55;
            }

            [data-theme="dark"] {
                /* Dark ‚Äî Deep Indigo (punchier accents) */
                --bg1: oklch(15% 0.05 260);
                --bg2: oklch(20% 0.06 250);
                --fg: oklch(94% 0.03 255);
                --muted: oklch(72% 0.03 255);
                --accent: oklch(78% 0.2 285);
                --accent-2: oklch(72% 0.16 35);
                --card: oklch(22% 0.03 255 / 0.74);
                --ring: oklch(96% 0 0 / 0.14);
                --btn: var(--fg);
                --btnText: oklch(15% 0.05 260);
                --elev-1: 0 8px 22px rgba(0, 0, 0, 0.34);
                --elev-2: 0 16px 36px rgba(0, 0, 0, 0.4);
                --elev-3: 0 22px 56px rgba(0, 0, 0, 0.46);
            }

            /* Shared glossy wrapper for home sections */
            .home-block {
                border-radius: 24px;
                padding: clamp(18px, 3vw, 24px);
                background: radial-gradient(
                        120% 150% at 0% 0%,
                        color-mix(in oklch, var(--accent-2), transparent 88%),
                        transparent 60%
                    ),
                    linear-gradient(
                        180deg,
                        color-mix(in oklch, var(--card), white 6%),
                        color-mix(in oklch, var(--card), transparent 4%)
                    );
                border: 1px solid
                    color-mix(in oklch, var(--ring), transparent 20%);
                box-shadow:
                    0 14px 32px rgba(10, 12, 16, 0.12),
                    0 0 0 1px rgba(255, 255, 255, 0.18);
                backdrop-filter: blur(18px) saturate(1.05);
            }

            /* optional: softer variant if needed */
            .home-block--soft {
                background: linear-gradient(
                    145deg,
                    color-mix(in oklch, var(--card), white 10%),
                    color-mix(in oklch, var(--card), transparent 4%)
                );
                box-shadow: var(--elev-1);
            }

            /* ---------- Base typography ---------- */
            body {
                font-family: var(--font-sans);
                font-size: var(--fs-body);
                line-height: var(--lh-body);
                color: var(--fg);
                background: radial-gradient(
                        1200px 800px at 15% -10%,
                        var(--bg1),
                        transparent 65%
                    ),
                    radial-gradient(
                        900px 600px at 85% 0%,
                        color-mix(in oklch, var(--bg2), white 3%),
                        transparent 60%
                    ),
                    radial-gradient(
                        1200px 500px at 50% -15%,
                        color-mix(in oklch, var(--accent-2), transparent 85%),
                        transparent 70%
                    ),
                    linear-gradient(
                        135deg,
                        color-mix(in oklch, var(--bg2), white 6%),
                        var(--bg1)
                    );
                display: flex;
                flex-direction: column;
                min-height: 100vh;
                position: relative;
            }

            button,
            input,
            select,
            textarea {
                font-family: var(--font-sans);
                font-size: inherit;
            }

            h1,
            h2,
            h3,
            h4 {
                margin: 0;
                font-weight: var(--fw-semibold);
                line-height: var(--lh-title);
                color: var(--fg);
            }
            h1 {
                font-size: var(--fs-h1);
            }
            h2 {
                font-size: var(--fs-h2);
            }
            h3 {
                font-size: var(--fs-body);
                font-weight: var(--fw-medium);
            }
            h4 {
                font-size: var(--fs-body-sm);
                font-weight: var(--fw-medium);
            }

            p {
                margin: 0 0 0.6em;
                font-size: var(--fs-body);
                line-height: var(--lh-body);
            }

            small {
                font-size: var(--fs-caption);
                line-height: 1.4;
            }

            /* Semantic text utilities */
            .typ-display {
                font-size: var(--fs-display);
                line-height: var(--lh-tight);
                font-weight: var(--fw-bold);
                letter-spacing: 0.01em;
            }
            .typ-h1 {
                font-size: var(--fs-h1);
                line-height: var(--lh-title);
                font-weight: var(--fw-semibold);
            }
            .typ-h2 {
                font-size: var(--fs-h2);
                line-height: var(--lh-title);
                font-weight: var(--fw-semibold);
            }
            .typ-body {
                font-size: var(--fs-body);
                line-height: var(--lh-body);
                font-weight: var(--fw-regular);
            }
            .typ-body-sm {
                font-size: var(--fs-body-sm);
                line-height: var(--lh-body);
                font-weight: var(--fw-regular);
                color: var(--muted);
            }
            .typ-caption {
                font-size: var(--fs-caption);
                line-height: 1.4;
                font-weight: var(--fw-medium);
                color: var(--muted);
                letter-spacing: 0.02em;
                text-transform: uppercase;
            }

            /* Map existing component classes to scale */
            .section-heading,
            .peek__title,
            .ts-title,
            .more__title {
                font-size: var(--fs-h1);
                line-height: var(--lh-title);
                font-weight: var(--fw-semibold);
                text-align: center;
            }
            .section-subtitle,
            .peek__subtitle,
            .ts-subtitle {
                font-size: var(--fs-body-sm);
                line-height: var(--lh-body);
                color: var(--muted);
                text-align: center;
            }
            .tile__title,
            .peek-card__title,
            .ts-item__title {
                font-size: var(--fs-h2);
                line-height: var(--lh-title);
                font-weight: var(--fw-semibold);
            }
            .tile__sub,
            .peek-card__subtitle,
            .ts-item__sub {
                font-size: var(--fs-body-sm);
                line-height: var(--lh-body);
                color: var(--muted);
            }

            /* Soft grain + vignette */
            body::before {
                content: "";
                position: fixed;
                inset: 0;
                pointer-events: none;
                background-image: radial-gradient(
                    rgba(0, 0, 0, 0.03) 1px,
                    transparent 0
                );
                background-size: 2px 2px;
                opacity: 0.22;
                mix-blend-mode: multiply;
            }
            body::after {
                content: "";
                position: fixed;
                inset: 0;
                pointer-events: none;
                background: radial-gradient(
                    1200px 300px at 50% -8%,
                    color-mix(in oklch, var(--accent-2), transparent 88%),
                    transparent 70%
                );
                opacity: 0.9;
            }

            img,
            video,
            svg,
            canvas {
                max-width: 100%;
                height: auto;
                display: block;
            }

            /* Header ‚Äî premium glass */
            header {
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 14px 24px;
                background: color-mix(in oklch, var(--card), transparent 6%);
                border-bottom: 1px solid
                    color-mix(in oklch, var(--ring), transparent 15%);
                position: sticky;
                top: 0;
                z-index: 10;
                box-shadow: var(--elev-1);
            }
            @media (min-width: 640px) and (prefers-reduced-transparency: no-preference) {
                header {
                    backdrop-filter: blur(10px) saturate(1.05);
                }
            }
            header .brand {
                display: flex;
                align-items: center;
                gap: 10px;
                font-weight: 650;
                font-size: var(--fs-body);
                text-decoration: none;
                color: var(--fg);
            }
            header img {
                width: 28px;
                height: 28px;
                border-radius: 8px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.12);
            }
            nav a {
                color: var(--fg);
                text-decoration: none;
                margin-left: 16px;
                font-size: var(--fs-body-sm);
                opacity: 0.9;
            }
            nav a:hover {
                opacity: 1;
                text-decoration: underline;
            }

            /* Focus & skip */
            .skip-link {
                position: absolute;
                left: -9999px;
                top: auto;
            }
            .skip-link:focus {
                left: 16px;
                top: 16px;
                padding: 8px 12px;
                background: var(--card);
                border: 1px solid var(--ring);
                border-radius: 10px;
            }
            a,
            button {
                outline: none;
            }
            a:focus-visible,
            button:focus-visible {
                box-shadow: 0 0 0 3px
                    color-mix(in oklch, var(--accent), transparent 40%);
                border-radius: 12px;
            }

            button.theme-toggle {
                border: 1px solid
                    color-mix(in oklch, var(--ring), transparent 20%);
                background: linear-gradient(
                    180deg,
                    color-mix(in oklch, var(--card), white 5%),
                    color-mix(in oklch, var(--card), transparent 10%)
                );
                border-radius: 50%;
                width: 36px;
                height: 36px;
                font-size: 18px;
                cursor: pointer;
                color: var(--fg);
                box-shadow: var(--elev-1);
            }

            main {
                flex: 1;
                width: 100%;
                margin: 0;
                padding: 32px 0 40px;
            }

            /* Every direct child of <main> shares one centered column */
            main > * {
                max-width: var(--container);
                margin-left: auto;
                margin-right: auto;
                padding-left: 16px;
                padding-right: 16px;
                box-sizing: border-box;
            }

            /* ‚ÄúChip‚Äù polish */
            .dl__chips {
                display: flex;
                gap: 8px;
                justify-content: center;
                flex-wrap: wrap;
                list-style: none;
                padding: 0;
                margin: 12px 0 2px;
            }
            .dl__chips li {
                padding: 7px 12px;
                border-radius: 999px;
                font-size: var(--fs-caption);
                font-weight: var(--fw-medium);
                color: var(--fg);
                background: linear-gradient(
                    180deg,
                    color-mix(in oklch, var(--card), white 12%),
                    color-mix(in oklch, var(--card), transparent 12%)
                );
                border: 1px solid
                    color-mix(in oklch, var(--accent), transparent 88%);
                box-shadow:
                    inset 0 1px 0 rgba(255, 255, 255, 0.55),
                    0 4px 10px rgba(0, 0, 0, 0.06);
            }

            /* Footer */
            footer {
                width: 100%;
                text-align: center;
                color: var(--muted);
            }
            footer .wrap {
                max-width: var(--container);
                margin: 32px auto 0; /* center horizontally */
                padding: 0 24px; /* side padding like main */
                box-sizing: border-box;
            }
            footer p {
                margin-top: 24px;
                font-size: var(--fs-caption);
                color: var(--muted);
                text-align: center;
            }
            footer .legal {
                margin-top: 24px;
                margin-bottom: 24px;
                display: flex;
                gap: 14px;
                justify-content: center;
                flex-wrap: wrap;
                font-size: var(--fs-caption);
            }
            footer .legal a {
                color: var(--muted);
                text-decoration: none;
            }
            footer .legal a:hover {
                text-decoration: underline;
            }

            @media (prefers-reduced-motion: reduce) {
                * {
                    animation: none !important;
                    transition: none !important;
                }
            }
            @keyframes fade {
                from {
                    opacity: 0;
                    transform: translateY(12px);
                }
                to {
                    opacity: 1;
                    transform: none;
                }
            }
        </style>
    </head>

    <body>
        <a href="#content" class="skip-link">Skip to content</a>

        <header>
            <a class="brand" href="/" aria-label="Tulaa home">
                <img
                    src="https://images.tulaa.life/logo.webp"
                    alt="Tulaa logo"
                />
                <span>Tulaa</span>
            </a>
            <div style="display:flex; align-items:center; gap:12px;">
                <nav aria-label="Site"></nav>
                <button
                    class="theme-toggle"
                    type="button"
                    onclick="toggleTheme()"
                    aria-label="Toggle theme"
                >
                    üåì
                </button>
            </div>
        </header>

        <main id="content">
            <slot />
        </main>

        {
            !hideFooter && (
                <footer>
                    <div class="wrap">
                        <IntroCard
                            variant="footer"
                            headline="Download the Tulaa App"
                            subline="Your calm companion ‚Äî yoga, meditation & journaling."
                            showLogo={false}
                        />
                    </div>

                    <div class="legal" aria-label="Legal and contact">
                        <a href="/legal/privacy">Privacy Policy</a>
                        <a href="/legal/terms">Terms of Use</a>
                        <a href="mailto:contact@tulaalife.com" rel="noopener">
                            Contact Us
                        </a>
                    </div>
                    <p>
                        ¬© {new Date().getFullYear()} Tulaalife Wellness Private
                        Limited ¬∑ All rights reserved.
                    </p>
                </footer>
            )
        }
    </body>
</html>
