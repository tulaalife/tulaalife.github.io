---
interface Props {
    title: string;
    description?: string;
    canonicalPath?: string;
    ogImage?: string;
}
const {
    title,
    description = "Yoga, meditation, journaling, rhythms and care â€” privacy-first, ad-free, offline-ready.",
    canonicalPath = "/",
    ogImage = "https://images.tulaa.life/logo.webp",
} = Astro.props;

const site = "https://tulaalife.com";
const url = new URL(canonicalPath, site).toString();
---

<!doctype html>
<html lang="en" data-theme="light">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={url} />

        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Tulaa" />
        <meta property="og:url" content={url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImage} />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImage} />

        <link
            rel="icon"
            href="https://images.tulaa.life/favicon.ico"
            sizes="any"
        />
        <link
            rel="apple-touch-icon"
            href="https://images.tulaa.life/apple-touch-icon.png"
        />

        <style>
            :root {
                --bg1: #f6eef3;
                --bg2: #eaf4f4;
                --fg: #1f1f23;
                --muted: #5c5c66;
                --accent: #8a6fa0;
                --card: #ffffffcc;
                --ring: #00000014;
                --btn: #1f1f23;
                --btnText: #fff;
            }
            [data-theme="dark"] {
                --bg1: #0f1013;
                --bg2: #1a1b20;
                --fg: #eaeaf0;
                --muted: #a3a3b1;
                --accent: #b48dff;
                --card: #1c1d22cc;
                --ring: #ffffff14;
                --btn: #eaeaf0;
                --btnText: #0f1013;
            }

            html,
            body {
                height: 100%;
                margin: 0;
            }
            body {
                font-family:
                    ui-sans-serif,
                    system-ui,
                    -apple-system,
                    Segoe UI,
                    Roboto,
                    Helvetica,
                    Arial;
                color: var(--fg);
                background: linear-gradient(135deg, var(--bg1), var(--bg2));
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }

            header {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 14px 24px;
                backdrop-filter: blur(8px);
                background: var(--card);
                border-bottom: 1px solid var(--ring);
            }
            header .brand {
                display: flex;
                align-items: center;
                gap: 10px;
                font-weight: 600;
                font-size: 1.1rem;
                text-decoration: none;
                color: var(--fg);
            }
            header img {
                width: 28px;
                height: 28px;
            }
            button.theme-toggle {
                border: none;
                background: var(--card);
                border-radius: 50%;
                width: 34px;
                height: 34px;
                font-size: 18px;
                cursor: pointer;
                color: var(--fg);
            }

            main {
                flex: 1;
                padding: 28px 24px;
                width: min(92vw, 820px);
                margin: 0 auto;
                background: var(--card);
                backdrop-filter: blur(8px);
                border-radius: 24px;
                border: 1px solid var(--ring);
                box-shadow: 0 12px 40px rgba(0, 0, 0, 0.08);
                animation: fade 700ms ease-out both;
            }

            footer {
                padding: 32px 24px;
                text-align: center;
                color: var(--muted);
            }
            footer .download-card {
                background: var(--card);
                border: 1px solid var(--ring);
                border-radius: 16px;
                padding: 16px;
                margin-bottom: 16px;
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 12px;
            }
            footer .buttons {
                display: flex;
                gap: 12px;
            }
            footer .buttons a {
                text-decoration: none;
                border-radius: 10px;
                padding: 8px 14px;
                font-weight: 500;
                background: var(--btn);
                color: var(--btnText);
            }
            @keyframes fade {
                from {
                    opacity: 0;
                    transform: translateY(12px);
                }
                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        </style>

        <script>
            // theme toggle persistence
            const saved = localStorage.getItem("tulaa-theme");
            if (saved) document.documentElement.dataset.theme = saved;
            function toggleTheme() {
                const current = document.documentElement.dataset.theme;
                const next = current === "dark" ? "light" : "dark";
                document.documentElement.dataset.theme = next;
                localStorage.setItem("tulaa-theme", next);
            }
            window.toggleTheme = toggleTheme;
        </script>
    </head>

    <body>
        <header>
            <a class="brand" href="/">
                <img
                    src="https://images.tulaa.life/logo.webp"
                    alt="Tulaa logo"
                />
                <span>Tulaa</span>
            </a>
            <button
                class="theme-toggle"
                onclick="toggleTheme()"
                aria-label="Toggle theme">ðŸŒ“</button
            >
        </header>

        <main>
            <slot />
        </main>

        <footer>
            <div class="download-card">
                <h3 style="margin:0;">Download the Tulaa App</h3>
                <p
                    style="margin:4px 0 10px;color:var(--muted);font-size:0.95rem;"
                >
                    Your calm companion â€” yoga, meditation & journaling, ad-free
                    and offline-ready.
                </p>
                <div class="buttons">
                    <a
                        href="https://apps.apple.com/in/app/tulaa/id6748626498"
                        target="_blank">ï£¿ App Store</a
                    >
                    <a
                        href="https://play.google.com/store/apps/details?id=life.tulaa.app"
                        target="_blank">â–¶ Play Store</a
                    >
                </div>
            </div>
            <!-- <p style="style="margin-top:10px;font-size:12px;color:var(--muted);"> -->

            <p style="margin-top:10px;font-size:12px;color:var(--muted);">
                Â© {new Date().getFullYear()} Tulaalife Wellness Private Limited
                Â· All rights reserved.
            </p>
            <a
                href="mailto:support@tulaa.life"
                style="margin-top:10px;font-size:12px;color:var(--muted);"
                >Contact Us</a
            >
        </footer>
    </body>
</html>
