---
import DownloadCTA from "../components/DownloadCTA.astro";

interface Props {
    title: string;
    description?: string;
    canonicalPath?: string;
    ogImage?: string;
    hideFooter?: boolean;
}

const {
    title,
    description = "Yoga, meditation, journaling, rhythms and care â€” privacy-first, ad-free, offline-ready.",
    canonicalPath = "/",
    ogImage = "https://images.tulaa.life/logo.webp",
    hideFooter = false,
} = Astro.props;

const site = "https://tulaalife.com";
const url = new URL(canonicalPath, site).toString();
---

<!doctype html>
<html lang="en" data-theme="light">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="color-scheme" content="light dark" />
        <meta
            name="theme-color"
            media="(prefers-color-scheme: light)"
            content="#f6eef3"
        />
        <meta
            name="theme-color"
            media="(prefers-color-scheme: dark)"
            content="#0f1013"
        />
        <meta name="robots" content="index,follow" />

        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={url} />

        <!-- Open Graph / Twitter -->
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Tulaa" />
        <meta property="og:url" content={url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImage} />
        <meta
            property="og:image:alt"
            content="Tulaa â€” yoga, meditation & journaling"
        />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImage} />
        <meta
            name="twitter:image:alt"
            content="Tulaa â€” yoga, meditation & journaling"
        />

        <!-- Favicons -->
        <link
            rel="icon"
            href="https://images.tulaa.life/favicon.ico"
            sizes="any"
        />
        <link
            rel="apple-touch-icon"
            href="https://images.tulaa.life/apple-touch-icon.png"
        />

        <!-- PWA + perf -->
        <link rel="manifest" href="/site.webmanifest" />
        <link rel="preconnect" href="https://images.tulaa.life" crossorigin />

        <!-- Smart App Banner -->
        <meta
            name="apple-itunes-app"
            content="app-id=6748626498, app-argument=https://tulaalife.com"
        />

        <!-- Early theme -->
        <script is:inline>
            (() => {
                try {
                    const saved = localStorage.getItem("tulaa-theme");
                    const prefersDark =
                        window.matchMedia &&
                        window.matchMedia("(prefers-color-scheme: dark)")
                            .matches;
                    document.documentElement.dataset.theme =
                        saved || (prefersDark ? "dark" : "light");
                } catch {}
                window.toggleTheme = function toggleTheme() {
                    const d = document.documentElement;
                    const next =
                        (d.dataset.theme || "light") === "dark"
                            ? "light"
                            : "dark";
                    d.dataset.theme = next;
                    try {
                        localStorage.setItem("tulaa-theme", next);
                    } catch {}
                };
            })();
        </script>

        <!-- Variable font -->
        <link
            rel="preload"
            as="font"
            type="font/woff2"
            href="/fonts/InterVariable.woff2"
            crossorigin
        />
        <style>
            @font-face {
                font-family: "Inter Var";
                src:
                    local("InterVariable"),
                    local("Inter Variable"),
                    url("/fonts/InterVariable.woff2") format("woff2");
                font-weight: 100 900;
                font-stretch: 75% 125%;
                font-style: normal;
                font-display: swap;
                size-adjust: 105%;
            }
        </style>

        <!-- Structured data -->
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "SoftwareApplication",
                "name": "Tulaa",
                "applicationCategory": "HealthApplication",
                "operatingSystem": "iOS, Android",
                "offers": {
                    "@type": "Offer",
                    "price": "0",
                    "priceCurrency": "USD"
                },
                "description": "Yoga, meditation, journaling, rhythms and care â€” privacy-first, ad-free, offline-ready."
            }
        </script>

        <style>
            /* ---------- Base & tokens ---------- */
            *,
            *::before,
            *::after {
                box-sizing: border-box;
            }
            html,
            body {
                width: 100%;
                height: 100%;
                margin: 0;
                overflow-x: hidden;
            }
            html {
                -webkit-font-smoothing: antialiased;
            }
            :root {
                -webkit-text-size-adjust: 100%;
                text-size-adjust: 100%;
            }

            :root {
                --bg1: oklch(97% 0.02 320);
                --bg2: oklch(97% 0.02 210);
                --fg: oklch(22% 0.02 260);
                --muted: oklch(50% 0.02 260);
                --accent: oklch(70% 0.09 300);
                --card: color-mix(in oklch, white 85%, transparent);
                --ring: oklch(0% 0 0 / 0.08);
                --btn: var(--fg);
                --btnText: white;
                --radius-xl: 24px;
                --elev-3: 0 12px 40px rgba(0, 0, 0, 0.08);
                --container: 920px;
                --font-sans: "Inter Var", ui-sans-serif, system-ui,
                    -apple-system, "Segoe UI", Roboto, Helvetica, Arial;
            }
            [data-theme="dark"] {
                --bg1: oklch(18% 0.01 260);
                --bg2: oklch(22% 0.01 260);
                --fg: oklch(92% 0.01 260);
                --muted: oklch(70% 0.02 260);
                --accent: oklch(80% 0.1 300);
                --card: oklch(22% 0.01 260 / 0.78);
                --ring: oklch(100% 0 0 / 0.08);
                --btn: var(--fg);
                --btnText: oklch(18% 0.01 260);
            }

            body {
                font-family: var(--font-sans);
                color: var(--fg);
                background: radial-gradient(
                        1200px 800px at 20% 0%,
                        var(--bg1),
                        transparent 60%
                    ),
                    linear-gradient(
                        135deg,
                        color-mix(in oklch, var(--bg2), white 10%),
                        var(--bg1)
                    );
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }

            /* Subtle grain */
            body::before {
                content: "";
                position: fixed;
                inset: 0;
                pointer-events: none;
                background-image: radial-gradient(
                    rgba(0, 0, 0, 0.03) 1px,
                    transparent 0
                );
                background-size: 2px 2px;
                opacity: 0.22;
                mix-blend-mode: multiply;
            }

            img,
            video,
            svg,
            canvas {
                max-width: 100%;
                height: auto;
                display: block;
            }

            /* Header */
            header {
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 14px 24px;
                background: color-mix(in oklch, var(--card), transparent 10%);
                border-bottom: 1px solid var(--ring);
                position: sticky;
                top: 0;
                z-index: 10;
            }
            @media (min-width: 640px) and (prefers-reduced-transparency: no-preference) {
                header {
                    backdrop-filter: blur(8px);
                }
            }
            header .brand {
                display: flex;
                align-items: center;
                gap: 10px;
                font-weight: 600;
                font-size: 1.1rem;
                text-decoration: none;
                color: var(--fg);
            }
            header img {
                width: 28px;
                height: 28px;
                border-radius: 8px;
            }

            nav a {
                color: var(--fg);
                text-decoration: none;
                margin-left: 16px;
                font-size: 0.95rem;
                opacity: 0.9;
            }
            nav a:hover {
                opacity: 1;
                text-decoration: underline;
            }

            /* Skip link & focus */
            .skip-link {
                position: absolute;
                left: -9999px;
                top: auto;
            }
            .skip-link:focus {
                left: 16px;
                top: 16px;
                padding: 8px 12px;
                background: var(--card);
                border: 1px solid var(--ring);
                border-radius: 10px;
            }
            a,
            button {
                outline: none;
            }
            a:focus-visible,
            button:focus-visible {
                box-shadow: 0 0 0 3px var(--ring);
                border-radius: 12px;
            }

            button.theme-toggle {
                border: 1px solid var(--ring);
                background: var(--card);
                border-radius: 50%;
                width: 34px;
                height: 34px;
                font-size: 18px;
                cursor: pointer;
                color: var(--fg);
            }

            main {
                flex: 1;
                width: 100%;
                max-width: var(--container);
                margin: 24px auto;
                padding: 28px 16px;
                background: var(--card);
                border-radius: var(--radius-xl);
                border: 1px solid var(--ring);
                box-shadow: var(--elev-3);
                animation: fade 700ms ease-out both;
            }

            footer {
                width: 100%;
                padding: 32px 24px;
                text-align: center;
                color: var(--muted);
            }
            footer .legal {
                margin-top: 12px;
                display: flex;
                gap: 14px;
                justify-content: center;
                flex-wrap: wrap;
                font-size: 12px;
            }
            footer .legal a {
                color: var(--muted);
                text-decoration: none;
            }
            footer .legal a:hover {
                text-decoration: underline;
            }
            footer .wrap {
                max-width: var(--container);
                margin: 0 auto;
            }

            @media (prefers-reduced-motion: reduce) {
                * {
                    animation: none !important;
                    transition: none !important;
                }
            }
            @keyframes fade {
                from {
                    opacity: 0;
                    transform: translateY(12px);
                }
                to {
                    opacity: 1;
                    transform: none;
                }
            }
        </style>
    </head>

    <body>
        <a href="#content" class="skip-link">Skip to content</a>

        <header>
            <a class="brand" href="/" aria-label="Tulaa home">
                <img
                    src="https://images.tulaa.life/logo.webp"
                    alt="Tulaa logo"
                />
                <span>Tulaa</span>
            </a>
            <div style="display:flex; align-items:center; gap:12px;">
                <nav aria-label="Site"></nav>
                <button
                    class="theme-toggle"
                    type="button"
                    onclick="toggleTheme()"
                    aria-label="Toggle theme">ðŸŒ“</button
                >
            </div>
        </header>

        <main id="content">
            <slot />
        </main>

        {
            !hideFooter && (
                <footer>
                    <div class="wrap">
                        <DownloadCTA
                            client:idle
                            variant="footer"
                            headline="Download the Tulaa App"
                            subline="Your calm companion â€” yoga, meditation & journaling."
                            showLogo={false}
                        />
                    </div>

                    <p style="margin-top:10px;font-size:12px;color:var(--muted);text-align:center;">
                        Â© {new Date().getFullYear()} Tulaalife Wellness Private
                        Limited Â· All rights reserved.
                    </p>
                    <div
                        class="legal"
                        aria-label="Legal and contact"
                        style="text-align:center;"
                    >
                        <a href="/legal/privacy">Privacy Policy</a>
                        <a href="/legal/terms">Terms of Use</a>
                        <a href="mailto:contact@tulaalife.com" rel="noopener">
                            Contact Us
                        </a>
                    </div>
                </footer>
            )
        }
    </body>
</html>
