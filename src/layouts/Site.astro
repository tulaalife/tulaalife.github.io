---
import IntroCard from "../components/IntroCard.astro";

interface Props {
    title: string;
    description?: string;
    canonicalPath?: string;
    ogImage?: string;
    hideFooter?: boolean;
}

const {
    title,
    description = "Yoga, meditation, journaling, rhythms and care â€” privacy-first, ad-free, offline-ready.",
    canonicalPath = "/",
    ogImage = "https://images.tulaa.life/logo.webp",
    hideFooter = false,
} = Astro.props;

const site = "https://tulaalife.com";
const url = new URL(canonicalPath, site).toString();
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="color-scheme" content="light dark" />

        <!-- Updated theme-colors to match new palette -->
        <meta
            name="theme-color"
            media="(prefers-color-scheme: light)"
            content="#f5f2f8"
        />
        <meta
            name="theme-color"
            media="(prefers-color-scheme: dark)"
            content="#14161a"
        />

        <meta name="robots" content="index,follow" />
        <title>{title}</title>
        <meta name="description" content={description} />
        <link rel="canonical" href={url} />

        <!-- Open Graph / Twitter -->
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Tulaa" />
        <meta property="og:url" content={url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImage} />
        <meta
            property="og:image:alt"
            content="Tulaa â€” yoga, meditation & journaling"
        />
        <meta property="og:image:width" content="1200" />
        <meta property="og:image:height" content="630" />
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImage} />
        <meta
            name="twitter:image:alt"
            content="Tulaa â€” yoga, meditation & journaling"
        />

        <!-- Favicons -->
        <link
            rel="icon"
            href="https://images.tulaa.life/favicon.ico"
            sizes="any"
        />
        <link
            rel="apple-touch-icon"
            href="https://images.tulaa.life/apple-touch-icon.png"
        />

        <!-- perf -->
        <link rel="preconnect" href="https://images.tulaa.life" crossorigin />

        <!-- Smart App Banner -->
        <meta
            name="apple-itunes-app"
            content="app-id=6748626498, app-argument=https://tulaalife.com"
        />

        <!-- Early theme -->
        <script is:inline>
            (() => {
                const root = document.documentElement;

                function applyTheme(theme) {
                    root.dataset.theme = theme;
                    root.style.colorScheme = theme;
                }

                try {
                    const saved = localStorage.getItem("tulaa-theme");
                    const initial =
                        saved === "dark" || saved === "light" ? saved : "light";
                    applyTheme(initial);
                } catch {
                    applyTheme("light");
                }

                // Expose toggle on window
                // @ts-ignore
                window.toggleTheme = function toggleTheme() {
                    const current =
                        root.dataset.theme === "dark" ? "dark" : "light";
                    const next = current === "dark" ? "light" : "dark";
                    applyTheme(next);
                    try {
                        localStorage.setItem("tulaa-theme", next);
                    } catch {}
                };
            })();
        </script>

        <!-- Variable font -->
        <link
            rel="preload"
            as="font"
            type="font/woff2"
            href="/fonts/InterVariable.woff2"
            crossorigin
        />
        <style>
            @font-face {
                font-family: "Inter Var";
                src:
                    local("InterVariable"),
                    local("Inter Variable"),
                    url("/fonts/InterVariable.woff2") format("woff2");
                font-weight: 100 900;
                font-stretch: 75% 125%;
                font-style: normal;
                font-display: swap;
                size-adjust: 105%;
            }
        </style>

        <!-- Structured data -->
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "SoftwareApplication",
                "name": "Tulaa",
                "applicationCategory": "HealthApplication",
                "operatingSystem": "iOS, Android",
                "offers": {
                    "@type": "Offer",
                    "price": "0",
                    "priceCurrency": "USD"
                },
                "description": "Yoga, meditation, journaling, rhythms and care â€” privacy-first, ad-free, offline-ready."
            }
        </script>

        <style>
            /* ---------- Base & tokens (OKLCH-tuned) ---------- */
            *,
            *::before,
            *::after {
                box-sizing: border-box;
            }
            html,
            body {
                width: 100%;
                height: 100%;
                margin: 0;
                overflow-x: hidden;
            }
            html {
                -webkit-font-smoothing: antialiased;
            }
            :root {
                -webkit-text-size-adjust: 100%;
                text-size-adjust: 100%;
            }

            :root {
                /* Light â€” Sunrise Iris */
                --bg1: oklch(98% 0.045 300);
                --bg2: oklch(96% 0.06 240);
                --fg: oklch(22% 0.04 255);
                --muted: oklch(48% 0.05 255);
                --accent: oklch(70% 0.18 285);
                --accent-2: oklch(78% 0.14 35);
                --card: oklch(100% 0 0 / 0.86);
                --ring: oklch(40% 0 0 / 0.12);
                --btn: var(--fg);
                --btnText: white;

                --radius-xl: 24px;
                --container: 980px;
                --elev-1: 0 6px 18px rgba(10, 12, 16, 0.08);
                --elev-2: 0 12px 28px rgba(10, 12, 16, 0.12);
                --elev-3: 0 18px 46px rgba(10, 12, 16, 0.14);

                --font-sans: "Inter Var", system-ui, -apple-system,
                    BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial,
                    sans-serif;

                --fw-regular: 400;
                --fw-medium: 500;
                --fw-semibold: 600;
                --fw-bold: 700;

                --fs-display: clamp(2.2rem, 3.1vw, 2.8rem);
                --fs-h1: clamp(1.7rem, 2.3vw, 2.1rem);
                --fs-h2: clamp(1.35rem, 1.8vw, 1.6rem);
                --fs-body: 0.98rem;
                --fs-body-sm: 0.9rem;
                --fs-caption: 0.78rem;

                --lh-tight: 1.2;
                --lh-title: 1.24;
                --lh-body: 1.55;

                /* Animated blob colours */
                --blob-1: color-mix(in oklch, var(--accent) 72%, white 20%);
                --blob-2: color-mix(in oklch, var(--accent-2) 82%, white 16%);
                --blob-3: oklch(92% 0.09 210);
            }

            [data-theme="dark"] {
                --bg1: oklch(15% 0.05 260);
                --bg2: oklch(20% 0.06 250);
                --fg: oklch(94% 0.03 255);
                --muted: oklch(72% 0.03 255);
                --accent: oklch(78% 0.2 285);
                --accent-2: oklch(72% 0.16 35);
                --card: oklch(22% 0.03 255 / 0.74);
                --ring: oklch(96% 0 0 / 0.14);
                --btn: var(--fg);
                --btnText: oklch(15% 0.05 260);
                --elev-1: 0 8px 22px rgba(0, 0, 0, 0.34);
                --elev-2: 0 16px 36px rgba(0, 0, 0, 0.4);
                --elev-3: 0 22px 56px rgba(0, 0, 0, 0.46);

                --blob-1: color-mix(in oklch, var(--accent) 60%, black 25%);
                --blob-2: color-mix(in oklch, var(--accent-2) 65%, black 20%);
                --blob-3: oklch(24% 0.06 230);
            }

            /* ---------- Background shell ---------- */

            body {
                font-family: var(--font-sans);
                font-size: var(--fs-body);
                line-height: var(--lh-body);
                color: var(--fg);
                /* soft base gradient */
                background: radial-gradient(
                        1200px 800px at 15% -10%,
                        var(--bg1),
                        transparent 65%
                    ),
                    radial-gradient(
                        900px 600px at 85% 0%,
                        color-mix(in oklch, var(--bg2), white 3%),
                        transparent 60%
                    ),
                    linear-gradient(
                        135deg,
                        color-mix(in oklch, var(--bg2), white 6%),
                        var(--bg1)
                    );
                display: flex;
                flex-direction: column;
                min-height: 100vh;
                position: relative;
            }

            /* Animated blobs layer */
            .bg-orbit {
                position: fixed;
                inset: -160px;
                pointer-events: none;
                z-index: -1;
                overflow: hidden;
                mix-blend-mode: normal;
            }
            .bg-orbit::before,
            .bg-orbit::after {
                content: "";
                position: absolute;
                border-radius: 999px;
                filter: blur(42px);
                opacity: 0.85;
                transform-origin: center;
                will-change: transform, opacity;
            }
            .bg-orbit::before {
                width: 520px;
                height: 520px;
                background: radial-gradient(
                    circle at 30% 20%,
                    var(--blob-1),
                    transparent 60%
                );
                top: -80px;
                left: 8%;
                animation: driftA 42s ease-in-out infinite alternate;
            }
            .bg-orbit::after {
                width: 620px;
                height: 620px;
                background: radial-gradient(
                        circle at 70% 80%,
                        var(--blob-2),
                        transparent 60%
                    ),
                    radial-gradient(
                        circle at 10% 90%,
                        var(--blob-3),
                        transparent 70%
                    );
                bottom: -120px;
                right: -10%;
                animation: driftB 52s ease-in-out infinite alternate;
            }

            /* Soft grain + vignette */
            body::before {
                content: "";
                position: fixed;
                inset: 0;
                pointer-events: none;
                background-image: radial-gradient(
                    rgba(0, 0, 0, 0.028) 1px,
                    transparent 0
                );
                background-size: 2px 2px;
                opacity: 0.2;
                mix-blend-mode: multiply;
            }
            body::after {
                content: "";
                position: fixed;
                inset: 0;
                pointer-events: none;
                background: radial-gradient(
                    1200px 340px at 50% -10%,
                    color-mix(in oklch, var(--accent-2), transparent 88%),
                    transparent 72%
                );
                opacity: 0.85;
                animation: haloFloat 36s ease-in-out infinite alternate;
            }

            img,
            video,
            svg,
            canvas {
                max-width: 100%;
                height: auto;
                display: block;
            }

            button,
            input,
            select,
            textarea {
                font-family: var(--font-sans);
                font-size: inherit;
            }

            /* ---------- Typography ---------- */

            h1,
            h2,
            h3,
            h4 {
                margin: 0;
                font-weight: var(--fw-semibold);
                line-height: var(--lh-title);
                color: var(--fg);
            }
            h1 {
                font-size: var(--fs-h1);
            }
            h2 {
                font-size: var(--fs-h2);
            }
            h3 {
                font-size: var(--fs-body);
                font-weight: var(--fw-medium);
            }
            h4 {
                font-size: var(--fs-body-sm);
                font-weight: var(--fw-medium);
            }

            p {
                margin: 0 0 0.6em;
                font-size: var(--fs-body);
                line-height: var(--lh-body);
            }

            small {
                font-size: var(--fs-caption);
                line-height: 1.4;
            }

            .typ-display {
                font-size: var(--fs-display);
                line-height: var(--lh-tight);
                font-weight: var(--fw-bold);
                letter-spacing: 0.01em;
            }
            .typ-h1 {
                font-size: var(--fs-h1);
                line-height: var(--lh-title);
                font-weight: var(--fw-semibold);
            }
            .typ-h2 {
                font-size: var(--fs-h2);
                line-height: var(--lh-title);
                font-weight: var(--fw-semibold);
            }
            .typ-body {
                font-size: var(--fs-body);
                line-height: var(--lh-body);
                font-weight: var(--fw-regular);
            }
            .typ-body-sm {
                font-size: var(--fs-body-sm);
                line-height: var(--lh-body);
                font-weight: var(--fw-regular);
                color: var(--muted);
            }
            .typ-caption {
                font-size: var(--fs-caption);
                line-height: 1.4;
                font-weight: var(--fw-medium);
                color: var(--muted);
                letter-spacing: 0.02em;
                text-transform: uppercase;
            }

            .section-heading,
            .peek__title,
            .ts-title,
            .more__title {
                font-size: var(--fs-h1);
                line-height: var(--lh-title);
                font-weight: var(--fw-semibold);
                text-align: center;
            }
            .section-subtitle,
            .peek__subtitle,
            .ts-subtitle {
                font-size: var(--fs-body-sm);
                line-height: var(--lh-body);
                color: var(--muted);
                text-align: center;
            }
            .tile__title,
            .peek-card__title,
            .ts-item__title {
                font-size: var(--fs-h2);
                line-height: var(--lh-title);
                font-weight: var(--fw-semibold);
            }
            .tile__sub,
            .peek-card__subtitle,
            .ts-item__sub {
                font-size: var(--fs-body-sm);
                line-height: var(--lh-body);
                color: var(--muted);
            }

            /* ---------- Glassy blocks ---------- */

            .home-block {
                border-radius: var(--radius-xl);
                padding: clamp(18px, 3vw, 24px);
                background: radial-gradient(
                        120% 150% at 0% 0%,
                        color-mix(in oklch, var(--accent-2), transparent 88%),
                        transparent 60%
                    ),
                    linear-gradient(
                        180deg,
                        color-mix(in oklch, var(--card), white 6%),
                        color-mix(in oklch, var(--card), transparent 4%)
                    );
                border: 1px solid
                    color-mix(in oklch, var(--ring), transparent 20%);
                box-shadow:
                    0 14px 32px rgba(10, 12, 16, 0.12),
                    0 0 0 1px rgba(255, 255, 255, 0.18);
                backdrop-filter: blur(18px) saturate(1.06);
            }

            .home-block--soft {
                background: linear-gradient(
                    145deg,
                    color-mix(in oklch, var(--card), white 10%),
                    color-mix(in oklch, var(--card), transparent 4%)
                );
                box-shadow: var(--elev-1);
            }

            /* ---------- Header (glassy) ---------- */

            header {
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 14px 24px;
                background: color-mix(in oklch, var(--card), transparent 8%);
                border-bottom: 1px solid
                    color-mix(in oklch, var(--ring), transparent 10%);
                position: sticky;
                top: 0;
                z-index: 10;
                box-shadow: var(--elev-1);
                backdrop-filter: blur(10px) saturate(1.05);
            }

            header .brand {
                display: flex;
                align-items: center;
                gap: 10px;
                font-weight: 650;
                font-size: var(--fs-body);
                text-decoration: none;
                color: var(--fg);
            }
            header img {
                width: 28px;
                height: 28px;
                border-radius: 8px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.12);
            }
            nav a {
                color: var(--fg);
                text-decoration: none;
                margin-left: 16px;
                font-size: var(--fs-body-sm);
                opacity: 0.9;
            }
            nav a:hover {
                opacity: 1;
                text-decoration: underline;
            }

            /* Focus & skip */

            .skip-link {
                position: absolute;
                left: -9999px;
                top: auto;
            }
            .skip-link:focus {
                left: 16px;
                top: 16px;
                padding: 8px 12px;
                background: var(--card);
                border: 1px solid var(--ring);
                border-radius: 10px;
            }
            a,
            button {
                outline: none;
            }
            a:focus-visible,
            button:focus-visible {
                box-shadow: 0 0 0 3px
                    color-mix(in oklch, var(--accent), transparent 40%);
                border-radius: 12px;
            }

            button.theme-toggle {
                border: 1px solid
                    color-mix(in oklch, var(--ring), transparent 20%);
                background: linear-gradient(
                    180deg,
                    color-mix(in oklch, var(--card), white 5%),
                    color-mix(in oklch, var(--card), transparent 10%)
                );
                border-radius: 50%;
                width: 36px;
                height: 36px;
                font-size: 18px;
                cursor: pointer;
                color: var(--fg);
                box-shadow: var(--elev-1);
            }

            /* ---------- Layout ---------- */

            main {
                flex: 1;
                width: 100%;
                margin: 0;
                padding: 32px 0 40px;
            }

            main > * {
                max-width: var(--container);
                margin-left: auto;
                margin-right: auto;
                padding-left: 16px;
                padding-right: 16px;
                box-sizing: border-box;
            }

            /* Chips */

            .dl__chips {
                display: flex;
                gap: 8px;
                justify-content: center;
                flex-wrap: wrap;
                list-style: none;
                padding: 0;
                margin: 12px 0 2px;
            }
            .dl__chips li {
                padding: 7px 12px;
                border-radius: 999px;
                font-size: var(--fs-caption);
                font-weight: var(--fw-medium);
                color: var(--fg);
                background: linear-gradient(
                    180deg,
                    color-mix(in oklch, var(--card), white 12%),
                    color-mix(in oklch, var(--card), transparent 12%)
                );
                border: 1px solid
                    color-mix(in oklch, var(--accent), transparent 88%);
                box-shadow:
                    inset 0 1px 0 rgba(255, 255, 255, 0.55),
                    0 4px 10px rgba(0, 0, 0, 0.06);
            }

            /* Footer */

            footer {
                width: 100%;
                text-align: center;
                color: var(--muted);
            }
            footer .wrap {
                max-width: var(--container);
                margin: 32px auto 0;
                padding: 0 24px;
                box-sizing: border-box;
            }
            footer p {
                margin-top: 24px;
                font-size: var(--fs-caption);
                color: var(--muted);
                text-align: center;
            }
            footer .legal {
                margin-top: 24px;
                margin-bottom: 24px;
                display: flex;
                gap: 14px;
                justify-content: center;
                flex-wrap: wrap;
                font-size: var(--fs-caption);
            }
            footer .legal a {
                color: var(--muted);
            }
            footer .legal a:hover {
                text-decoration: underline;
            }

            /* ---------- Motion ---------- */

            @keyframes driftA {
                0% {
                    transform: translate3d(-40px, 0, 0) scale(1);
                    opacity: 0.9;
                }
                100% {
                    transform: translate3d(40px, 40px, 0) scale(1.05);
                    opacity: 0.75;
                }
            }

            @keyframes driftB {
                0% {
                    transform: translate3d(30px, 20px, 0) scale(1.1);
                    opacity: 0.85;
                }
                100% {
                    transform: translate3d(-60px, -20px, 0) scale(0.95);
                    opacity: 0.7;
                }
            }

            @keyframes haloFloat {
                0% {
                    transform: translate3d(0, 0, 0);
                    opacity: 0.9;
                }
                100% {
                    transform: translate3d(0, 22px, 0);
                    opacity: 0.75;
                }
            }

            @media (prefers-reduced-motion: reduce) {
                * {
                    animation: none !important;
                    transition: none !important;
                }
            }
        </style>
    </head>

    <body>
        <div class="bg-orbit" aria-hidden="true"></div>

        <a href="#content" class="skip-link">Skip to content</a>

        <header>
            <a class="brand" href="/" aria-label="Tulaa home">
                <img
                    src="https://images.tulaa.life/logo.webp"
                    alt="Tulaa logo"
                />
                <span>Tulaa</span>
            </a>
            <div style="display:flex; align-items:center; gap:12px;">
                <nav aria-label="Site"></nav>
                <button
                    class="theme-toggle"
                    type="button"
                    onclick="toggleTheme()"
                    aria-label="Toggle theme"
                >
                    ðŸŒ“
                </button>
            </div>
        </header>

        <main id="content">
            <slot />
        </main>

        {
            !hideFooter && (
                <footer>
                    <div class="wrap">
                        <IntroCard
                            variant="footer"
                            headline="Download the Tulaa App"
                            subline="Your holistic yoga companion with meditation, journaling, water and period tracking, rhythms and more, all private and ad-free."
                            showLogo={false}
                        />
                    </div>

                    <div class="legal" aria-label="Legal and contact">
                        <a href="/legal/privacy">Privacy Policy</a>
                        <a href="/legal/terms">Terms of Use</a>
                        <a href="mailto:contact@tulaalife.com" rel="noopener">
                            Contact Us
                        </a>
                    </div>
                    <p>
                        Â© {new Date().getFullYear()} Tulaalife Wellness Private
                        Limited Â· All rights reserved.
                    </p>
                </footer>
            )
        }
    </body>
</html>
