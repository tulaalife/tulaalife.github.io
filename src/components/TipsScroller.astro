---
import CTAButton from "./CTAButton.astro";

export interface TipItem {
    tip: string;
    benefit?: string;
    icon?: string; // emoji or URL
    slug?: string;
    href?: string;
}

export interface Props {
    title: string;
    subtitle?: string;
    items: TipItem[];
    ctaHref?: string;
    ctaLabel?: string;
}

const { title, subtitle, items = [], ctaHref, ctaLabel } = Astro.props;

const hasCTA = Boolean(ctaHref && ctaLabel);

// 1. Circular Illusion: Repeat items
const REPEAT_COUNT = 12;
const displayItems = Array(REPEAT_COUNT).fill(items).flat();
---

{
    items.length > 0 && (
        <section class="tips-shelf-section" aria-label={title}>
            <header class="tips-shelf-header">
                <h2 class="tips-shelf-title">{title}</h2>
                {subtitle && <p class="tips-shelf-subtitle">{subtitle}</p>}
            </header>

            {/* Added ID for JS targeting */}
            <div class="tips-viewport" id={`tips-${title.replace(/\s+/g, "")}`}>
                <ul class="tips-track" role="list">
                    {displayItems.map((t, index) => (
                        <li class="tips-item">
                            {/* 2. FIX: Use t.href if available, fallback to slug */}
                            <a
                                href={t.href || `/tips/${t.slug}`}
                                class="tips-card"
                            >
                                <div class="tips-card-icon">
                                    {t.icon?.startsWith("http") ? (
                                        <img
                                            src={t.icon}
                                            alt=""
                                            loading="lazy"
                                        />
                                    ) : (
                                        <span>{t.icon ?? "ðŸ’¡"}</span>
                                    )}
                                </div>
                                <div class="tips-card-body">
                                    <h3 class="tips-card-title">{t.tip}</h3>
                                    {t.benefit && (
                                        <p class="tips-card-desc">
                                            {t.benefit}
                                        </p>
                                    )}
                                </div>
                            </a>
                        </li>
                    ))}
                </ul>
            </div>

            {hasCTA && (
                <div class="tips-footer">
                    <CTAButton
                        href={ctaHref!}
                        label={ctaLabel!}
                        variant="soft"
                        size="lg"
                    />
                </div>
            )}
        </section>
    )
}

<script
    is:inline
    define:vars={{
        itemCount: items.length,
        repeatCount: REPEAT_COUNT,
        title,
    }}
>
    (function () {
        const id = `tips-${title.replace(/\s+/g, "")}`;
        const viewport = document.getElementById(id);
        if (!viewport) return;

        // 1. Daily Random Seeding Logic
        const today = new Date();
        const dateSeed =
            today.getFullYear() * 10000 +
            (today.getMonth() + 1) * 100 +
            today.getDate();

        const pseudoRandom = (seed) => {
            let x = Math.sin(seed) * 10000;
            return x - Math.floor(x);
        };

        const middleBatch = Math.floor(repeatCount / 2);
        const randomOffset = Math.floor(pseudoRandom(dateSeed) * itemCount);
        const startIndex = middleBatch * itemCount + randomOffset;

        // 2. Find target
        const cards = viewport.querySelectorAll(".tips-item");
        const targetCard = cards[startIndex];

        if (targetCard) {
            // 3. SAFE SCROLL (scrollLeft)
            const cardLeft = targetCard.offsetLeft;
            const cardWidth = targetCard.offsetWidth;
            const viewportWidth = viewport.offsetWidth;

            const targetPosition = cardLeft - viewportWidth / 2 + cardWidth / 2;

            viewport.scrollLeft = targetPosition;

            // Enable smooth scrolling AFTER the initial jump
            requestAnimationFrame(() => {
                viewport.style.scrollBehavior = "smooth";
            });
        }
    })();
</script>

<style>
    /* Section Layout */
    .tips-shelf-section {
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    /* Header */
    .tips-shelf-header {
        text-align: center;
        padding: 0 16px;
    }

    .tips-shelf-title {
        font-size: var(--fs-h1);
        margin: 0 0 6px;
        letter-spacing: -0.01em;
    }

    .tips-shelf-subtitle {
        margin: 0;
        font-size: var(--fs-body);
        color: var(--muted);
    }

    /* Viewport (Scroll Container) */
    .tips-viewport {
        width: 100%;
        overflow-x: auto;
        overflow-y: hidden;
        scrollbar-width: none;
        -webkit-overflow-scrolling: touch;
        scroll-behavior: auto;
        padding: 20px 0 50px;
        margin: 0;
        scroll-snap-type: x mandatory;
    }

    .tips-viewport::-webkit-scrollbar {
        display: none;
    }

    /* Track */
    .tips-track {
        display: flex;
        gap: 16px;
        padding-inline: calc(50% - 130px);
        margin: 0;
        list-style: none;
        width: max-content;
        box-sizing: border-box;
    }

    /* Item */
    .tips-item {
        flex: 0 0 auto;
        width: 260px;
        scroll-snap-align: center;
        scroll-snap-stop: always;
    }

    /* Card Styling */
    .tips-card {
        display: flex;
        flex-direction: column;
        height: 100%;
        background: var(--card);
        border: 1px solid var(--ring);
        border-radius: 20px;
        padding: 24px;
        text-decoration: none;
        color: inherit;
        transition:
            transform 0.2s ease,
            box-shadow 0.2s ease,
            border-color 0.2s ease;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.03);
    }

    .tips-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--elev-2);
        border-color: color-mix(in oklch, var(--accent), transparent 60%);
    }

    /* Icon "Stamp" */
    .tips-card-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        background: var(--bg2);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        margin-bottom: 20px;
        border: 1px solid color-mix(in oklch, var(--ring), transparent 50%);
    }

    .tips-card-icon img {
        width: 28px;
        height: 28px;
        object-fit: contain;
    }

    /* Text */
    .tips-card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    .tips-card-title {
        margin: 0;
        font-size: 1.1rem;
        font-weight: var(--fw-semibold);
        line-height: 1.3;
        color: var(--fg);
    }

    .tips-card-desc {
        margin: 0;
        font-size: var(--fs-body-sm);
        color: var(--muted);
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Footer */
    .tips-footer {
        display: flex;
        justify-content: center;
        margin-top: 8px;
    }
</style>
