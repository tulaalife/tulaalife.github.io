---
import CTAButton from "./CTAButton.astro";

export interface TipItem {
    tip: string;
    benefit?: string;
    icon?: string; // emoji or URL
}
export interface Props {
    title: string;
    subtitle?: string;
    items: TipItem[]; // ~5 recommended
    intervalMs?: number; // default 5200ms
    ctaHref?: string; // optional CTA (Explore tips)
    ctaLabel?: string;
}

const {
    title,
    subtitle,
    items = [],
    intervalMs = 5200,
    ctaHref,
    ctaLabel,
} = Astro.props;

const hasCTA = Boolean(ctaHref && ctaLabel);
---

{
    items.length > 0 && (
        <section
            class="ts-wrap"
            data-interval={String(intervalMs)}
            tabindex="0"
            role="region"
            aria-label={title}
        >
            <header class="ts-header">
                <h2 class="ts-title">{title}</h2>
                {subtitle && <p class="ts-subtitle">{subtitle}</p>}
            </header>

            <div class="ts-panel" aria-live="polite">
                <ul class="ts-track" role="list">
                    {items.map((t, idx) => (
                        <li
                            class="ts-slide"
                            aria-hidden={idx === 0 ? "false" : "true"}
                            data-active={idx === 0 ? "true" : "false"}
                        >
                            <div class="ts-card">
                                <div class="ts-icon" aria-hidden="true">
                                    {t.icon?.startsWith("http") ? (
                                        <img
                                            src={t.icon}
                                            alt=""
                                            loading="lazy"
                                            decoding="async"
                                        />
                                    ) : (
                                        <span>{t.icon ?? "ðŸ’¡"}</span>
                                    )}
                                </div>
                                <div class="ts-body">
                                    <h3 class="ts-h3">{t.tip}</h3>
                                    {t.benefit && (
                                        <p class="ts-p">{t.benefit}</p>
                                    )}
                                </div>
                            </div>
                        </li>
                    ))}
                </ul>
            </div>

            {hasCTA && (
                <div class="ts-ctaRow">
                    <CTAButton
                        href={ctaHref!}
                        label={ctaLabel!}
                        icon="â†—"
                        variant="solid"
                        size="lg"
                    />
                </div>
            )}
        </section>
    )
}

<style>
    .ts-wrap {
        margin: 36px auto 32px;
        padding: 8px 16px 16px;
        max-width: 880px;
    }

    /* Heading */
    .ts-header {
        text-align: center;
        margin-bottom: 18px;
    }
    .ts-title {
        font-size: var(--fs-h2);
        font-weight: var(--fw-semibold);
        margin: 0;
        letter-spacing: 0.01em;
    }
    .ts-subtitle {
        margin: 4px 0 0;
        color: var(--muted);
        font-size: var(--fs-body-sm);
    }

    /* Single premium card (outer only) */
    .ts-panel {
        --r: 24px;
        padding: 22px 24px;
        border-radius: var(--r);
        background: radial-gradient(
                160% 180% at 100% 0%,
                color-mix(in oklch, var(--accent-2), transparent 92%),
                transparent 70%
            ),
            linear-gradient(
                180deg,
                color-mix(in oklch, var(--card), white 6%),
                color-mix(in oklch, var(--card), transparent 10%)
            );
        border: 1px solid color-mix(in oklch, var(--ring), transparent 20%);
        box-shadow:
            0 22px 48px rgba(0, 0, 0, 0.08),
            0 2px 4px rgba(255, 255, 255, 0.28) inset;
        backdrop-filter: blur(6px) saturate(130%);
    }

    /* Track */
    .ts-track {
        position: relative;
        padding: 0;
        margin: 0;
        list-style: none;
        height: var(--ts-h, auto);
        min-height: 112px;
    }

    /* Center content vertically inside the slide */
    .ts-slide {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center; /* <-- ADD THIS */
        justify-content: center;
        opacity: 0;
        transform: translateY(8px) scale(0.985);
        transition:
            opacity 0.45s ease,
            transform 0.45s ease;
    }
    .ts-slide[data-active="true"] {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    /* Center the icon + text block together */
    .ts-card {
        width: 100%;
        max-width: 860px;
        margin: 0 auto;
        display: flex;
        align-items: center; /* <-- ADD THIS */
        gap: 16px;
        padding: 4px 0;
        background: transparent;
        border: none;
        box-shadow: none;
        border-radius: 18px;
        transition: transform 0.2s ease;
    }
    .ts-slide[data-active="true"] {
        opacity: 1;
        transform: translateY(0) scale(1);
    }

    .ts-card:hover {
        transform: translateY(-1px);
    }

    /* Icon badge â€” keep the premium look */
    .ts-icon {
        width: 52px;
        height: 52px;
        border-radius: 16px;
        display: grid;
        place-items: center;
        font-size: 28px;
        background: linear-gradient(
            180deg,
            color-mix(in oklch, var(--card), white 12%),
            color-mix(in oklch, var(--card), transparent 12%)
        );
        border: 1px solid color-mix(in oklch, var(--ring), transparent 28%);
        box-shadow:
            inset 0 2px 4px rgba(255, 255, 255, 0.65),
            0 6px 18px rgba(0, 0, 0, 0.08);
    }

    .ts-icon img {
        width: 30px;
        height: 30px;
        object-fit: contain;
    }

    /* Text */
    .ts-body {
        flex: 1;
    }
    .ts-h3 {
        margin: 0 0 6px;
        font-size: var(--fs-body-lg);
        font-weight: var(--fw-semibold);
        line-height: 1.35;
    }
    .ts-p {
        margin: 0;
        font-size: var(--fs-body-sm);
        color: var(--muted);
        line-height: 1.55;
    }

    /* CTA */
    .ts-ctaRow {
        display: flex;
        justify-content: center;
        margin-top: 24px;
    }
</style>

<script is:inline>
    (() => {
        function boot(root) {
            const track = root.querySelector(".ts-track");
            const slides = Array.from(root.querySelectorAll(".ts-slide"));
            if (!track || slides.length === 0) return;

            const setActive = (el, active) => {
                el.setAttribute("data-active", active ? "true" : "false");
                el.setAttribute("aria-hidden", active ? "false" : "true");
            };

            const adjustHeight = () => {
                const activeCard = root.querySelector(
                    '.ts-slide[data-active="true"] .ts-card',
                );
                if (!activeCard) return;
                track.style.setProperty(
                    "--ts-h",
                    activeCard.getBoundingClientRect().height + "px",
                );
            };

            slides.forEach((el, i) => setActive(el, i === 0));
            adjustHeight();

            if (slides.length <= 1) return;

            let idx = 0;
            const interval = Math.max(
                2400,
                Number(root.getAttribute("data-interval") || 5200),
            );
            let timer = null;
            let stopped = false; // stop autoplay after user interaction
            let hovered = false;

            const tick = () => {
                if (!hovered && !stopped) next();
            };
            const start = () => {
                stop();
                timer = setInterval(tick, interval);
            };
            const stop = () => {
                if (timer) clearInterval(timer);
                timer = null;
            };

            const next = () => {
                const prev = slides[idx];
                idx = (idx + 1) % slides.length;
                const cur = slides[idx];
                setActive(prev, false);
                setActive(cur, true);
                adjustHeight();
            };

            // Stop autoplay on user intent
            const stopForUser = () => {
                if (stopped) return;
                stopped = true;
                stop();
            };
            ["pointerdown", "touchstart", "wheel", "keydown"].forEach((ev) => {
                root.addEventListener(ev, stopForUser, { passive: true });
            });

            root.addEventListener("mouseenter", () => (hovered = true));
            root.addEventListener("mouseleave", () => (hovered = false));

            // init
            setTimeout(start, 200);
            window.addEventListener("resize", adjustHeight);
        }

        document.readyState === "loading"
            ? document.addEventListener(
                  "DOMContentLoaded",
                  () => document.querySelectorAll(".ts-wrap").forEach(boot),
                  { once: true },
              )
            : document.querySelectorAll(".ts-wrap").forEach(boot);
    })();
</script>
