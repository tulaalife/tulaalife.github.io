---
import Site from "../layouts/Site.astro";
import CTAButton from "./CTAButton.astro";
import type { YogaPlanPreview } from "../data/types";

interface Props {
    plan: YogaPlanPreview;
    canonicalPath: string;
    lang: string;
    labels: {
        back: string;
        openApp: string;
        browse: string;
    };
    backLink?: string;
    browseLink?: string;
}

const { plan, canonicalPath, lang, labels, backLink, browseLink } = Astro.props;

const finalBackLink = backLink || `/${lang}/yoga`;
const finalBrowseLink = browseLink || `/${lang}/yoga`;
---

<Site
    title={`${plan.title} · Yoga Plan · Tulaa`}
    description={plan.teaser ||
        plan.subtitle ||
        "Gentle preview of this Tulaa yoga plan."}
    canonicalPath={canonicalPath}
    ogImage={plan.image}
>
    <div class="content-shell">
        <article class="plan-card">
            <!-- Back Navigation -->
            <nav class="plan-nav">
                <a href={finalBackLink} class="back-link">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="16"
                        height="16"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                    >
                        <path d="m15 18-6-6 6-6"></path>
                    </svg>
                    {labels.back}
                </a>
            </nav>

            <!-- Hero Image -->
            <div class="image-hero">
                <div class="image-frame">
                    <img
                        src={plan.image}
                        alt={plan.title}
                        width="1200"
                        height="630"
                        loading="eager"
                    />
                </div>
            </div>

            <!-- Title + Subtitle -->
            <div class="plan-header">
                <h1 class="plan-title">{plan.title}</h1>
                {plan.subtitle && <p class="plan-subtitle">{plan.subtitle}</p>}
            </div>

            <!-- Body -->
            <div class="plan-body">
                {plan.teaser && <p class="plan-lead">{plan.teaser}</p>}

                {
                    plan.benefits && (
                        <div class="benefits-module">
                            <h3 class="benefits-label">✦ Key Benefits</h3>
                            <p class="benefits-text">{plan.benefits}</p>
                        </div>
                    )
                }
            </div>

            <!-- Footer -->
            <footer class="plan-footer">
                <p class="app-note">Available exclusively in the Tulaa App</p>

                <div class="button-group">
                    <CTAButton
                        href="https://apps.apple.com/app/id6748626498"
                        label={labels.openApp}
                        variant="solid"
                        size="md"
                    />

                    <CTAButton
                        href={finalBrowseLink}
                        label={labels.browse}
                        variant="soft"
                        size="md"
                    />
                </div>
            </footer>
        </article>
    </div>
</Site>

<style>
    .content-shell {
        max-width: 880px;
        margin: 0 auto;
        padding: 40px 20px 80px;
    }

    .plan-card {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }

    /* ================================
       NAV
    ================================= */
    .plan-nav {
        display: flex;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 0.95rem;
        font-weight: var(--fw-medium);
        color: var(--text-muted);
        transition: all 0.2s ease;
    }

    .back-link:hover {
        color: var(--primary);
        transform: translateX(-2px);
    }

    /* ================================
       HERO IMAGE
    ================================= */
    .image-hero {
        margin-top: 4px;
    }

    .image-frame {
        width: 100%;
        border-radius: 24px;
        overflow: hidden;
        border: 1px solid var(--border);
        box-shadow: var(--shadow);
        background: var(--bg-sub);
    }

    .image-frame img {
        width: 100%;
        aspect-ratio: 16/9;
        object-fit: cover;
        display: block;
        transition: transform 0.6s ease;
    }

    .image-frame:hover img {
        transform: scale(1.03);
    }

    /* ================================
       TITLE SECTION
    ================================= */
    .plan-header {
        text-align: center;
        margin: 24px auto 8px;
        max-width: 720px;
    }

    .plan-title {
        font-size: clamp(2rem, 4vw, 2.75rem);
        line-height: 1.15;
        letter-spacing: -0.03em;
        margin-bottom: 14px;
    }

    .plan-subtitle {
        font-size: 1.15rem;
        color: var(--text-muted);
        line-height: 1.6;
    }

    /* ================================
       BODY
    ================================= */
    .plan-body {
        max-width: 720px;
        margin: 0 auto;
    }

    .plan-lead {
        font-size: 1.2rem;
        line-height: 1.7;
        color: var(--text-main);
        margin-bottom: 40px;
    }

    /* ================================
       BENEFITS
    ================================= */
    .benefits-module {
        background: var(--bg-sub);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 28px;
    }

    .benefits-label {
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--primary);
        font-weight: var(--fw-semibold);
        margin-bottom: 10px;
    }

    .benefits-text {
        font-size: 1rem;
        line-height: 1.7;
        color: var(--text-main);
    }

    /* ================================
       FOOTER / CTA
    ================================= */
    .plan-footer {
        margin-top: 32px;
        padding-top: 32px;
        border-top: 1px solid var(--border);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        text-align: center;
    }

    .app-note {
        font-size: 0.9rem;
        color: var(--text-muted);
        opacity: 0.9;
    }

    .button-group {
        display: flex;
        gap: 14px;
        flex-wrap: wrap;
        justify-content: center;
    }

    /* ================================
       MOBILE
    ================================= */
    @media (max-width: 600px) {
        .content-shell {
            padding: 24px 16px 60px;
        }

        .plan-title {
            font-size: 1.8rem;
        }

        .plan-lead {
            font-size: 1.05rem;
        }
    }
</style>
