---
import StoreButtons from "./StoreButtons.astro";

interface Props {
    headline?: string;
    subline?: string;
}

const {
    headline = "Start Your Journey.",
    subline = "Expert yoga, daily tracking, and mindfulness. One app, completely free.",
} = Astro.props;

const highlights = [
    "100% Free & Offline",
    "No Account Needed",
    "Privacy First",
];
---

<section class="footer-card">
    <div class="content">
        <h2 class="title">{headline}</h2>
        <p class="sub">{subline}</p>

        <ul class="highlights">
            {highlights.map((item) => <li>{item}</li>)}
        </ul>

        <div class="actions">
            <StoreButtons centered={true} />
        </div>
    </div>
</section>

<style>
    .footer-card {
        --card-padding: clamp(3rem, 5vw, 4rem) 1.5rem;

        position: relative;
        width: 100%;
        max-width: var(--container-width);
        margin: 0 auto;
        padding: var(--card-padding);
        border-radius: 32px;
        text-align: center;
        overflow: hidden;

        /* Vibrant, Modern Gradient */
        background: linear-gradient(
            135deg,
            var(--primary),
            color-mix(in srgb, var(--primary), black 20%)
        );
        color: white;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    /* Dark mode depth adjustment */
    :global([data-theme="dark"]) .footer-card {
        background: linear-gradient(
            135deg,
            color-mix(in srgb, var(--primary), black 10%),
            color-mix(in srgb, var(--primary), black 50%)
        );
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
    }

    .content {
        position: relative;
        z-index: 2;
        max-width: 580px;
        margin: 0 auto;
    }

    .title {
        font-size: clamp(2rem, 4vw, 2.8rem);
        font-weight: var(--fw-bold);
        margin-bottom: 16px;
        color: white;
        line-height: 1.1;
        letter-spacing: -0.02em;
    }

    .sub {
        font-size: 1.15rem;
        margin-bottom: 32px;
        color: rgba(255, 255, 255, 0.95);
        line-height: 1.5;
        font-weight: 400;
    }

    .highlights {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 12px;
        list-style: none;
        padding: 0;
        margin: 0 0 40px;
    }

    .highlights li {
        font-size: 0.9rem;
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 99px;
        /* Glassmorphism Pill */
        background: rgba(255, 255, 255, 0.2);
        color: white;
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .actions {
        display: flex;
        justify-content: center;
    }
</style>
