---
import StoreButtons from "./StoreButtons.astro";

interface Props {
    headline?: string;
    subline?: string;
}

const {
    headline = "Start Your Journey.",
    subline = "Expert yoga, daily tracking, and mindfulness. One app, completely free.",
} = Astro.props;

const highlights = [
    "100% Free & Offline",
    "No Account Needed",
    "Privacy First",
];
---

<section class="footer-card">
    <div class="content">
        <h2 class="title">{headline}</h2>
        <p class="sub">{subline}</p>

        <ul class="highlights">
            {highlights.map((item) => <li>{item}</li>)}
        </ul>

        <div class="actions">
            <StoreButtons centered={true} />
        </div>
    </div>
</section>

<style>
    .footer-card {
        --card-padding: clamp(3rem, 5vw, 4rem) 1.5rem;

        position: relative;
        width: 100%;
        max-width: var(--container-width);
        margin: 0 auto;
        padding: var(--card-padding);
        border-radius: 32px;
        text-align: center;
        overflow: hidden;

        /* Softer Gradient */
        background: linear-gradient(
            135deg,
            color-mix(in srgb, var(--primary), white 10%),
            color-mix(in srgb, var(--primary), black 15%)
        );

        color: white;

        /* Softer depth */
        box-shadow:
            0 10px 30px rgba(0, 0, 0, 0.12),
            inset 0 1px 0 rgba(255, 255, 255, 0.15);
    }

    /* Glossy overlay */
    .footer-card::before {
        content: "";
        position: absolute;
        top: -30%;
        left: -20%;
        width: 140%;
        height: 100%;
        background: radial-gradient(
            circle at 30% 20%,
            rgba(255, 255, 255, 0.35),
            transparent 60%
        );
        transform: rotate(-8deg);
        pointer-events: none;
        opacity: 0.5;
    }

    /* Dark mode adjustment */
    :global([data-theme="dark"]) .footer-card {
        background: linear-gradient(
            135deg,
            color-mix(in srgb, var(--primary), black 10%),
            color-mix(in srgb, var(--primary), black 40%)
        );

        box-shadow:
            0 20px 40px rgba(0, 0, 0, 0.4),
            inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .content {
        position: relative;
        z-index: 2;
        max-width: 620px;
        margin: 0 auto;
    }

    .title {
        font-size: clamp(2rem, 4vw, 2.8rem);
        font-weight: var(--fw-bold);
        margin-bottom: 16px;
        line-height: 1.1;
        letter-spacing: -0.02em;
    }

    .sub {
        font-size: 1.15rem;
        margin-bottom: 32px;
        color: rgba(255, 255, 255, 0.95);
        line-height: 1.5;
    }

    /* Highlights */
    .highlights {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 12px;
        list-style: none;
        padding: 0;
        margin: 0 0 40px;
    }

    .highlights li {
        font-size: 0.9rem;
        font-weight: 600;
        padding: 8px 16px;
        border-radius: 999px;

        /* Softer glass */
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.25);
    }

    /* Store buttons container */
    .actions {
        display: flex;
        justify-content: center;
    }

    /* === MOBILE FIX === */
    @media (max-width: 600px) {
        .actions :global(.store-buttons) {
            display: flex !important;
            flex-direction: row !important;
            justify-content: center;
            gap: 12px;
            flex-wrap: wrap;
        }

        .actions :global(.store-buttons a) {
            flex: 1 1 auto;
            max-width: 220px;
        }
    }
</style>
