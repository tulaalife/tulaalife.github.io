---
import StoreButtons from "./StoreButtons.astro";

interface Props {
    headline?: string;
    subline?: string;
}

const {
    headline = "Start Your Journey.",
    subline = "Expert yoga, daily tracking, and mindfulness. One app, completely free.",
} = Astro.props;

const highlights = [
    "100% Free & Offline",
    "No Account Needed",
    "Privacy First",
];
---

<section class="footer-card-container">
    <div class="footer-card">
        <div class="mesh-gradient"></div>
        <div class="glow-orb"></div>

        <div class="content">
            <h2 class="title">{headline}</h2>
            <p class="sub">{subline}</p>

            <ul class="highlights">
                {highlights.map((item) => <li>{item}</li>)}
            </ul>

            <div class="actions">
                <div class="button-wrapper">
                    <StoreButtons centered={true} />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    /* Container to ensure absolute centering on mobile */
    .footer-card-container {
        width: 100%;
        display: flex;
        justify-content: center;
        margin: 1rem 0;
    }

    .footer-card {
        --card-bg-light: color-mix(in oklch, var(--primary), black 15%);
        --card-bg-dark: color-mix(in oklch, var(--primary), black 40%);

        position: relative;
        width: 100%;
        max-width: var(--container-width);
        padding: clamp(3rem, 8vw, 5rem) 2rem;
        border-radius: 40px;
        text-align: center;
        overflow: hidden;
        isolation: isolate;

        background: linear-gradient(
            145deg,
            var(--card-bg-light),
            var(--primary)
        );
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow:
            0 25px 50px -12px rgba(0, 0, 0, 0.25),
            inset 0 1px 1px rgba(255, 255, 255, 0.2);

        color: white;
    }

    :global([data-theme="dark"]) .footer-card {
        background: linear-gradient(160deg, var(--card-bg-dark), #09090b);
        border-color: rgba(255, 255, 255, 0.05);
    }

    /* Decorative Depth */
    .mesh-gradient {
        position: absolute;
        inset: 0;
        background-image:
            radial-gradient(
                at 0% 0%,
                rgba(255, 255, 255, 0.12) 0px,
                transparent 50%
            ),
            radial-gradient(
                at 100% 100%,
                rgba(0, 0, 0, 0.15) 0px,
                transparent 50%
            );
        z-index: -1;
    }

    .glow-orb {
        position: absolute;
        top: -10%;
        right: -5%;
        width: 350px;
        height: 350px;
        background: var(--primary);
        filter: blur(80px);
        opacity: 0.25;
        z-index: -1;
    }

    .content {
        position: relative;
        z-index: 2;
        max-width: 600px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center; /* Ensures text blocks are centered */
    }

    .title {
        font-size: clamp(2.25rem, 6vw, 3.5rem);
        font-weight: 800;
        margin-bottom: 1.25rem;
        line-height: 1.1;
        letter-spacing: -0.04em;
        color: #fff;
    }

    .sub {
        font-size: clamp(1rem, 2vw, 1.15rem);
        margin-bottom: 3rem;
        color: rgba(255, 255, 255, 0.85);
        line-height: 1.6;
    }

    /* Glass Chips */
    .highlights {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 12px;
        list-style: none;
        padding: 0;
        margin: 0 0 3.5rem;
    }

    .highlights li {
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        padding: 10px 20px;
        border-radius: 99px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: white;
    }

    .actions {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    /* Prevents StoreButtons from stretching */
    .button-wrapper {
        width: auto;
        display: inline-block;
        min-width: 160px; /* Adjust based on button size */
    }

    /* Mobile Fixes */
    @media (max-width: 768px) {
        .footer-card {
            padding: 3.5rem 1.5rem;
            border-radius: 32px;
        }

        .title {
            letter-spacing: -0.02em; /* Slightly looser for small screens */
        }

        .highlights {
            flex-direction: column;
            width: 100%;
            max-width: 260px; /* Keeps chips uniform on mobile */
        }

        .highlights li {
            width: 100%;
            padding: 12px;
        }

        .button-wrapper {
            width: 100%;
            max-width: 200px; /* Constrains the App Store/Play Store buttons */
        }
    }
</style>
