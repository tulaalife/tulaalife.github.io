---
import StoreButtons from "./StoreButtons.astro";

// 1. Get current language
const currentLang = Astro.currentLocale || "en";

// 2. Dynamic Dictionary
const ui = {
    en: {
        headline: "Start Your Journey.",
        subline:
            "Expert yoga, daily tracking, and mindfulness. One app, completely free.",
        highlights: [
            "100% Free & Offline",
            "No Account Needed",
            "Privacy First",
        ],
    },
    hi: {
        headline: "अपनी योग यात्रा शुरू करें।",
        subline:
            "एक्सपर्ट योग, ध्यान और रोज़ की सेहत ट्रैकिंग। एक ही ऐप में, पूरी तरह से फ्री।",
        highlights: [
            "100% फ्री",
            "अकाउंट की ज़रूरत नहीं",
            "प्राइवेसी सबसे पहले",
        ],
    },
};

const t = ui[currentLang as keyof typeof ui] || ui.en;

interface Props {
    headline?: string;
    subline?: string;
}

// 3. Fallback to the translated dictionary if no props are explicitly passed
const { headline = t.headline, subline = t.subline } = Astro.props;

const highlights = t.highlights;
---

<section class="footer-card-container">
    <div class="footer-card">
        <div class="mesh-gradient"></div>
        <div class="glow-orb"></div>

        <div class="content">
            <h2 class="title">{headline}</h2>
            <p class="sub">{subline}</p>

            <ul class="highlights">
                {highlights.map((item) => <li>{item}</li>)}
            </ul>

            <StoreButtons centered={true} />
        </div>
    </div>
</section>

<style>
    .footer-card-container {
        width: 100%;
        display: flex;
        justify-content: center;
        /* Reduced margin slightly */
        margin: 0.5rem 0;
    }

    .footer-card {
        --card-bg-light: color-mix(in oklch, var(--primary), black 15%);
        --card-bg-dark: color-mix(in oklch, var(--primary), black 40%);

        position: relative;
        width: 100%;
        max-width: var(--container-width);
        /* SIGNIFICANTLY REDUCED PADDING */
        padding: 2.5rem 2rem;
        border-radius: 32px; /* Slightly tighter radius for compact look */
        text-align: center;
        overflow: hidden;
        isolation: isolate;

        background: linear-gradient(
            145deg,
            var(--card-bg-light),
            var(--primary)
        );
        border: 1px solid rgba(255, 255, 255, 0.1);
        box-shadow:
            0 20px 40px -12px rgba(0, 0, 0, 0.25),
            inset 0 1px 1px rgba(255, 255, 255, 0.2);

        color: white;
    }

    :global([data-theme="dark"]) .footer-card {
        background: linear-gradient(160deg, var(--card-bg-dark), #09090b);
        border-color: rgba(255, 255, 255, 0.05);
    }

    /* Decorative Depth */
    .mesh-gradient {
        position: absolute;
        inset: 0;
        background-image:
            radial-gradient(
                at 0% 0%,
                rgba(255, 255, 255, 0.12) 0px,
                transparent 50%
            ),
            radial-gradient(
                at 100% 100%,
                rgba(0, 0, 0, 0.15) 0px,
                transparent 50%
            );
        z-index: -1;
    }

    .glow-orb {
        position: absolute;
        top: -20%;
        right: -10%;
        width: 300px;
        height: 300px;
        background: var(--primary);
        filter: blur(80px);
        opacity: 0.25;
        z-index: -1;
    }

    .content {
        position: relative;
        z-index: 2;
        max-width: 600px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .title {
        /* Reduced font size for compactness */
        font-size: clamp(1.75rem, 5vw, 2.5rem);
        font-weight: 800;
        margin-bottom: 0.75rem;
        line-height: 1.1;
        letter-spacing: -0.03em;
        color: #fff;
    }

    .sub {
        font-size: clamp(0.95rem, 2vw, 1.05rem);
        /* Reduced bottom margin */
        margin-bottom: 1.75rem;
        color: rgba(255, 255, 255, 0.9);
        line-height: 1.5;
        max-width: 480px; /* Constrain width to prevent long lines */
    }

    /* Glass Chips */
    .highlights {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 8px; /* Tighter gap */
        list-style: none;
        padding: 0;
        margin: 0 0 2rem; /* Reduced bottom margin */
    }

    .highlights li {
        font-size: 0.7rem;
        font-weight: 700;
        letter-spacing: 0.05em;
        text-transform: uppercase;
        /* Smaller padding inside pills */
        padding: 6px 14px;
        border-radius: 99px;
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.15);
        color: white;
    }

    /* Mobile Fixes */
    @media (max-width: 768px) {
        .footer-card {
            /* Compact mobile padding */
            padding: 2rem 1.25rem;
            border-radius: 24px;
        }

        .title {
            margin-bottom: 0.5rem;
        }

        .sub {
            margin-bottom: 1.5rem;
        }

        /* REMOVED: flex-direction: column on highlights.
           Keeping them row/wrap saves significant vertical space on mobile.
        */
        .highlights {
            max-width: 100%;
        }

        .highlights li {
            /* Allow pills to shrink slightly if needed */
            padding: 6px 12px;
            font-size: 0.65rem;
        }
    }
</style>
