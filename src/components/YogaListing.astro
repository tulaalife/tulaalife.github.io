---
import Site from "../layouts/Site.astro";
import type { Page } from "astro";
import type { YogaPlanPreview } from "../data/types";

interface Props {
    page: Page<YogaPlanPreview>;
    title: string;
    description: string;
    canonicalPath: string;
    lang: string;
    labels: {
        title: string;
        description: string;
        view: string;
        prev: string;
        next: string;
        metaPage: string;
    };
}

const { page, title, description, canonicalPath, lang, labels } = Astro.props;
---

<Site title={title} description={description} canonicalPath={canonicalPath}>
    <main class="page-container">
        <header class="page-header">
            <h1 class="title">{labels.title}</h1>
            <p class="subtitle">{labels.description}</p>
        </header>

        <div class="plans-grid">
            {
                page.data.map((p) => (
                    <a href={`/${lang}/yoga/${p.slug}`} class="plan-card">
                        <div class="card-image">
                            <img
                                src={p.image}
                                alt={p.title}
                                loading="lazy"
                                decoding="async"
                            />
                        </div>

                        <div class="card-content">
                            <h3 class="card-title">{p.title}</h3>
                            <p class="card-desc">{p.teaser}</p>
                            <div class="card-footer">
                                <span class="view-link">{labels.view}</span>
                                <span class="icon">→</span>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        {
            page.lastPage > 1 && (
                <nav class="pagination" aria-label="Pagination">
                    {page.url.prev ? (
                        <a href={page.url.prev} class="btn-pill">
                            ← {labels.prev}
                        </a>
                    ) : (
                        <span class="btn-pill disabled">← {labels.prev}</span>
                    )}

                    <span class="page-meta">
                        {labels.metaPage} {page.currentPage} / {page.lastPage}
                    </span>

                    {page.url.next ? (
                        <a href={page.url.next} class="btn-pill">
                            {labels.next} →
                        </a>
                    ) : (
                        <span class="btn-pill disabled">{labels.next} →</span>
                    )}
                </nav>
            )
        }
    </main>
</Site>

<style>
    /* Layout */
    .page-container {
        max-width: var(--container-width);
        margin: 0 auto;
        padding: 40px 24px 80px;
    }

    /* Header */
    .page-header {
        text-align: center;
        margin-bottom: 60px;
        padding-top: 20px;
    }
    .title {
        font-size: var(--text-h1);
        margin-bottom: 16px;
        letter-spacing: -0.02em;
    }
    .subtitle {
        font-size: 1.125rem;
        color: var(--text-muted);
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.5;
    }

    /* Grid */
    .plans-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 32px;
    }

    /* Cards */
    .plan-card {
        display: flex;
        flex-direction: column;
        background: var(--bg-sub); /* Subtle grey/off-white background */
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease,
            border-color 0.3s;
    }

    .plan-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow);
        border-color: color-mix(in srgb, var(--primary), transparent 70%);
    }

    /* Image Wrapper (Aspect Ratio) */
    .card-image {
        position: relative;
        width: 100%;
        aspect-ratio: 16/9; /* Cinematic ratio */
        overflow: hidden;
        border-bottom: 1px solid var(--border);
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .plan-card:hover .card-image img {
        transform: scale(1.05); /* Subtle zoom on hover */
    }

    /* Content */
    .card-content {
        padding: 24px;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: var(--fw-bold);
        margin-bottom: 8px;
        line-height: 1.2;
    }

    .card-desc {
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.6;
        margin-bottom: 24px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex-grow: 1;
    }

    /* Footer / Action */
    .card-footer {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--primary);
    }

    .plan-card:hover .icon {
        transform: translateX(4px);
        transition: transform 0.2s;
    }

    /* Pagination */
    .pagination {
        margin-top: 64px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
    }

    .page-meta {
        font-size: 0.9rem;
        color: var(--text-muted);
        font-variant-numeric: tabular-nums;
    }

    .btn-pill {
        display: inline-flex;
        align-items: center;
        padding: 10px 20px;
        border-radius: 999px;
        font-size: 0.9rem;
        font-weight: 500;
        text-decoration: none;
        color: var(--text-main);
        background: var(--bg-main);
        border: 1px solid var(--border);
        transition: all 0.2s;
    }

    .btn-pill:not(.disabled):hover {
        border-color: var(--primary);
        color: var(--primary);
    }

    .btn-pill.disabled {
        opacity: 0.5;
        cursor: not-allowed;
        background: transparent;
    }

    /* Mobile */
    @media (max-width: 600px) {
        .plans-grid {
            grid-template-columns: 1fr; /* Stack on mobile */
        }
        .page-header {
            margin-bottom: 40px;
        }
    }
</style>
