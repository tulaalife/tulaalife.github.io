---
import Site from "../layouts/Site.astro";
import type { Page } from "astro";

interface Plan {
    slug: string;
    title: string;
    teaser: string;
    image: string;
    language?: string;
}

interface Props {
    page: Page<Plan>;
    title: string;
    description: string;
    canonicalPath: string;
    lang: string;
    labels: {
        title: string;
        description: string;
        view: string;
        prev: string;
        next: string;
        metaPage: string;
    };
}

const { page, title, description, canonicalPath, lang, labels } = Astro.props;
---

<Site title={title} description={description} canonicalPath={canonicalPath}>
    <main class="listing-container">
        <div class="listing-header">
            <h1 class="page-title">{labels.title}</h1>
            <p class="page-subtitle">{labels.description}</p>
        </div>

        <div class="plans-grid">
            {
                page.data.map((p) => (
                    <a href={`/${lang}/yoga/${p.slug}`} class="plan-card">
                        <div class="card-image">
                            <img
                                src={p.image}
                                alt={p.title}
                                loading="lazy"
                                decoding="async"
                            />
                        </div>

                        <div class="card-content">
                            <h3 class="card-title">{p.title}</h3>
                            <p class="card-desc">{p.teaser}</p>

                            <div class="card-footer">
                                <span class="view-link">{labels.view}</span>
                                <span class="icon">→</span>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        {
            page.lastPage > 1 && (
                <nav class="pagination" aria-label="Pagination">
                    {page.url.prev ? (
                        <a href={page.url.prev} class="btn-pill">
                            ← {labels.prev}
                        </a>
                    ) : (
                        <span class="btn-pill disabled">← {labels.prev}</span>
                    )}

                    <span class="page-meta">
                        {labels.metaPage} {page.currentPage} / {page.lastPage}
                    </span>

                    {page.url.next ? (
                        <a href={page.url.next} class="btn-pill">
                            {labels.next} →
                        </a>
                    ) : (
                        <span class="btn-pill disabled">{labels.next} →</span>
                    )}
                </nav>
            )
        }
    </main>
</Site>

<style>
    /* =========================================
       LISTING LAYOUT
       ========================================= */

    .listing-container {
        max-width: var(--container-width);
        margin: 0 auto;
        padding: calc(var(--header-height) + 60px) 24px 80px;
    }

    /* Header Styles */
    .listing-header {
        text-align: center;
        margin-bottom: 60px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        /* Ensure it behaves like a normal block */
        position: relative;
    }

    .page-title {
        font-size: var(--text-display);
        margin-bottom: 16px;
        letter-spacing: -0.02em;
        line-height: 1.1;
    }

    .page-subtitle {
        font-size: 1.15rem;
        color: var(--text-muted);
        line-height: 1.5;
    }

    /* Grid System */
    .plans-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 32px;
    }

    /* =========================================
       PLAN CARD
       ========================================= */

    .plan-card {
        display: flex;
        flex-direction: column;
        background: var(--bg-sub);
        border: 1px solid var(--border);
        border-radius: var(--radius-lg);
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease,
            border-color 0.3s;
        height: 100%;
    }

    .plan-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow);
        border-color: color-mix(in srgb, var(--primary), transparent 70%);
    }

    /* Image - Fixed 4:3 Aspect Ratio */
    .card-image {
        position: relative;
        width: 100%;
        aspect-ratio: 4/3;
        overflow: hidden;
        border-bottom: 1px solid var(--border);
        background: var(--bg-main);
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    }

    .plan-card:hover .card-image img {
        transform: scale(1.06);
    }

    /* Content Area */
    .card-content {
        padding: 24px;
        display: flex;
        flex-direction: column;
        flex-grow: 1;
    }

    .card-title {
        font-size: 1.35rem;
        font-weight: var(--fw-bold);
        margin-bottom: 10px;
        line-height: 1.2;
        letter-spacing: -0.01em;
    }

    .card-desc {
        font-size: 1rem;
        color: var(--text-muted);
        line-height: 1.6;
        margin-bottom: 24px;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        flex-grow: 1;
    }

    /* Footer / Link */
    .card-footer {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--primary);
        margin-top: auto;
    }

    .plan-card:hover .icon {
        transform: translateX(4px);
        transition: transform 0.2s ease;
    }

    /* =========================================
       PAGINATION
       ========================================= */

    .pagination {
        margin-top: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
    }

    .page-meta {
        font-size: 0.95rem;
        color: var(--text-muted);
        font-variant-numeric: tabular-nums;
    }

    .btn-pill {
        display: inline-flex;
        align-items: center;
        padding: 10px 24px;
        border-radius: 999px;
        font-size: 0.95rem;
        font-weight: 500;
        text-decoration: none;
        color: var(--text-main);
        background: var(--bg-main);
        border: 1px solid var(--border);
        transition: all 0.2s;
    }

    .btn-pill:not(.disabled):hover {
        border-color: var(--primary);
        color: var(--primary);
        background: var(--bg-sub);
    }

    .btn-pill.disabled {
        opacity: 0.5;
        cursor: not-allowed;
        background: transparent;
    }

    /* Mobile Tweaks */
    @media (max-width: 600px) {
        .listing-container {
            padding-top: calc(var(--header-height) + 40px);
        }
        .plans-grid {
            grid-template-columns: 1fr;
        }
        .listing-header {
            margin-bottom: 40px;
        }
    }
</style>
