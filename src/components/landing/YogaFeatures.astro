<style>
    .section {
        padding: 100px 0;
    }
    .grid-layout {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        align-items: center;
    }
    .feature-img {
        width: 100%;
        max-width: 100%
        height: auto;
        border-radius: var(--radius-lg);
    }
    .shadow-lg {
        box-shadow: var(--shadow);
    }

    .section-title {
        font-size: var(--text-h1);
        margin-bottom: 24px;
    }
    .body-text {
        font-size: var(--text-body);
        color: var(--text-muted);
        margin-bottom: 32px;
    }

    .feature-list {
        display: flex;
        flex-direction: column;
        gap: 24px;
    }
    .feature-item {
        display: flex;
        gap: 16px;
        align-items: flex-start;
    }
    .check {
        color: var(--primary);
        font-weight: bold;
        font-size: 1.2rem;
        margin-top: -2px;
    }

    @media (max-width: 768px) {
        .section {
            padding: 64px 0;
        }
        .grid-layout {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 40px;
        }
        .reverse-mobile {
            display: flex;
            flex-direction: column-reverse;
        }
        .feature-item {
            justify-content: flex-start;
            text-align: left;
        }
        .text-col {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .feature-list {
            width: 100%;
            text-align: left;
        }
    }
