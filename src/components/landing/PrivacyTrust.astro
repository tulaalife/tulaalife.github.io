<style>
    .section {
        padding: 100px 0;
        background: var(
            --bg-main
        ); /* Ensures it sits nicely if section above is grey */
    }

    /* Header Styling */
    .header-content {
        text-align: center;
        max-width: 700px;
        margin: 0 auto 60px;
    }

    .section-title {
        font-size: var(--text-h1);
        margin-bottom: 24px;
        line-height: 1.1;
    }

    .body-text {
        font-size: var(--text-body);
        color: var(--text-muted);
        line-height: 1.6;
    }

    /* Grid Layout */
    .features-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 40px;
        text-align: center;
    }

    /* Card Styling */
    .feature-card {
        padding: 24px;
