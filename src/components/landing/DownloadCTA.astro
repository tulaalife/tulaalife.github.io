---
import StoreButtons from "../StoreButtons.astro";
---

<section id="download" class="section section-cta">
    <div class="container">
        <div class="cta-card">
            <h2 class="cta-title">Start Your Journey Today.</h2>
            <p class="cta-sub">Inclusive. Non-judgmental. Completely Free.</p>

            <StoreButtons centered={true} inverted={true} />

            <p class="legal-line">
                Â© {new Date().getFullYear()} Tulaalife Wellness Pvt Ltd.
            </p>
        </div>
    </div>
</section>

<style>
    .section {
        padding: 100px 0;
    }
    .cta-card {
        background: linear-gradient(
            135deg,
            var(--primary),
            color-mix(in srgb, var(--primary), white 40%)
        );
        padding: 80px 20px;
        border-radius: 32px;
        text-align: center;
        color: white;
    }
    :global([data-theme="dark"]) .cta-card {
        background: linear-gradient(
            135deg,
            var(--primary),
            color-mix(in srgb, var(--primary), black 60%)
        );
    }
    .cta-title {
        color: white;
        margin-bottom: 16px;
        font-size: var(--text-h1);
    }
    .cta-sub {
        opacity: 0.9;
        font-size: 1.2rem;
        margin-bottom: 40px;
    }
    .legal-line {
        margin-top: 60px;
        font-size: 0.8rem;
        opacity: 0.6;
    }
</style>
