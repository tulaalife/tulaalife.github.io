    }
    .tool-card p {
        font-size: 0.85rem;
        color: var(--text-muted);
        margin: 0;
    }

    @media (max-width: 768px) {
        .grid-layout {
            grid-template-columns: 1fr;
            text-align: center;
            gap: 40px;
        }
        .text-col {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .tools-grid {
