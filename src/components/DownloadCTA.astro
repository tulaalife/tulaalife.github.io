---
export interface Props {
    headline?: string;
    subline?: string;
    iosHref?: string;
    androidHref?: string;
    variant?: "hero" | "footer"; // layout + sizing presets
    showLogo?: boolean; // small logo above headline (hero only)
    androidComingSoon?: boolean; // NEW: show toast instead of navigating
}

const {
    headline = "Get Tulaa",
    subline = "Yoga, meditation & journaling â€” ad-free, offline, privacy-first.",
    iosHref = "https://apps.apple.com/in/app/tulaa/id6748626498",
    androidHref = "https://play.google.com/store/apps/details?id=life.tulaa",
    variant = "hero",
    showLogo = true,
    androidComingSoon = true,
} = Astro.props;

const isHero = variant === "hero";
---

<section
    class:list={["dl-wrap", isHero ? "dl-hero" : "dl-footer"]}
    aria-label="Download Tulaa"
>
    {
        isHero && showLogo && (
            <img
                class="dl-logo"
                src="https://images.tulaa.life/logo.webp"
                width="72"
                height="72"
                alt=""
            />
        )
    }

    <div class="dl-copy">
        <h2 class="dl-title">{headline}</h2>
        <p class="dl-sub">{subline}</p>

        <ul class="dl-chips" aria-label="App highlights">
            <li>Ad-free</li>
            <li>Offline</li>
            <li>Privacy-first</li>
        </ul>
    </div>

    <div class="dl-buttons" role="group" aria-label="Store buttons">
        <a
            class="dl-btn dl-btn--solid"
            href={iosHref}
            target="_blank"
            rel="noopener"
        >
            <span class="dl-ico" aria-hidden="true">
                <svg
                    viewBox="0 0 24 24"
                    width="18"
                    height="18"
                    fill="currentColor"
                    ><path
                        d="M16.365 1.43c0 1.14-.47 2.2-1.22 2.95-.78.78-1.93 1.36-3.06 1.28-.14-1.09.5-2.24 1.25-2.98.8-.82 2.17-1.44 3.03-1.25.01.01.01.01.01.02zM20.94 17.28c-.56 1.29-.83 1.86-1.55 3-.99 1.52-2.38 3.42-4.12 3.45-1.57.03-2-.99-4.18-.99s-2.67 1-4.23 1.02c-1.74.03-3.06-1.66-4.06-3.17-2.74-4.1-3.03-8.92-1.34-11.47 1.2-1.86 3.1-3.03 5.25-3.06 1.64-.03 3.18 1.1 4.18 1.1s2.88-1.36 4.86-1.16c.83.03 3.17.34 4.67 2.58-3.95 2.08-3.32 7.55.52 8.7z"
                    ></path></svg
                >
            </span>
            Get Tulaa on iOS
        </a>

        <a
            class="dl-btn dl-btn--ghost"
            href={androidHref}
            target="_blank"
            rel="noopener"
            data-android
            data-soon={androidComingSoon ? "true" : "false"}
            aria-describedby={androidComingSoon ? "android-toast" : undefined}
        >
            <span class="dl-ico" aria-hidden="true">
                <svg
                    viewBox="0 0 24 24"
                    width="18"
                    height="18"
                    fill="currentColor"
                    ><path
                        d="M3.6 2.2c-.37.23-.6.63-.6 1.08v17.44c0 .45.23.85.6 1.08l9.79-9.8L3.6 2.2zm12.2 4.19L12.4 9.78l-1.88 1.82 5.28 5.27 3.05 1.83c.66.4 1.51-.08 1.51-.84V6.2c0-.77-.85-1.24-1.51-.84l-3.05 2.03z"
                    ></path></svg
                >
            </span>
            Get Tulaa on Android
        </a>
    </div>

    <!-- toast (hidden by default) -->
    <div
        id="android-toast"
        class="dl-toast"
        role="status"
        aria-live="polite"
        aria-atomic="true"
    >
        Tulaa is coming soon on Android ðŸš€
    </div>
</section>

<style>
    .dl-wrap {
        --r: 22px;
        display: grid;
        place-items: center;
        text-align: center;
        gap: 12px;
        padding: 18px;
        border-radius: var(--r);
        background: linear-gradient(
                180deg,
                color-mix(in srgb, var(--card) 88%, transparent),
                var(--card)
            ),
            radial-gradient(
                120% 120% at 0% 0%,
                color-mix(in srgb, var(--fg) 6%, transparent),
                transparent 60%
            );
        border: 1px solid color-mix(in srgb, var(--ring) 72%, transparent);
        box-shadow: 0 10px 32px color-mix(in srgb, var(--fg) 12%, transparent);
    }
    .dl-hero {
        padding: 22px 20px;
    }
    .dl-footer {
        padding: 16px;
        --r: 18px;
    }

    .dl-logo {
        width: 72px;
        height: 72px;
        border-radius: 18px;
        filter: drop-shadow(0 8px 20px rgba(0, 0, 0, 0.08));
    }

    .dl-title {
        margin: 4px 0 6px;
        font-size: clamp(22px, 3.8vw, 34px);
        letter-spacing: 0.2px;
    }
    .dl-sub {
        margin: 0;
        color: var(--muted);
        font-size: clamp(14px, 2.1vw, 18px);
    }

    .dl-chips {
        display: flex;
        gap: 8px;
        justify-content: center;
        flex-wrap: wrap;
        list-style: none;
        padding: 0;
        margin: 10px 0 2px;
    }
    .dl-chips li {
        padding: 6px 10px;
        border-radius: 999px;
        font-size: 0.9rem;
        color: var(--fg);
        background: color-mix(in srgb, var(--btn) 10%, transparent);
        border: 1px solid color-mix(in srgb, var(--ring) 70%, transparent);
    }

    .dl-buttons {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 8px;
    }
    .dl-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 16px;
        border-radius: 14px;
        font-weight: 700;
        text-decoration: none;
        transition:
            transform 0.2s ease,
            box-shadow 0.25s ease,
            background 0.25s ease,
            border-color 0.25s ease;
        border: 1px solid color-mix(in srgb, var(--ring) 70%, transparent);
    }
    .dl-btn--solid {
        background: var(--btn);
        color: var(--btnText);
    }
    .dl-btn--ghost {
        background: transparent;
        color: var(--fg);
    }
    .dl-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 26px color-mix(in srgb, var(--fg) 14%, transparent);
    }
    .dl-ico {
        display: inline-grid;
        place-items: center;
    }

    /* Toast */
    .dl-toast {
        pointer-events: none;
        opacity: 0;
        transform: translateY(6px);
        transition:
            opacity 0.25s ease,
            transform 0.25s ease;
        background: color-mix(in srgb, var(--btn) 10%, transparent);
        border: 1px solid color-mix(in srgb, var(--ring) 70%, transparent);
        border-radius: 12px;
        padding: 8px 12px;
        font-weight: 600;
        color: var(--fg);
    }
    .dl-toast[data-show="true"] {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script>
    // @ts-nocheck
    (() => {
        function boot(root) {
            const androidBtn = root.querySelector("a[data-android]");
            const toast = root.querySelector(".dl-toast");
            if (!androidBtn || !toast) return;

            if (androidBtn.getAttribute("data-soon") === "true") {
                androidBtn.addEventListener(
                    "click",
                    (e) => {
                        e.preventDefault();
                        toast.setAttribute("data-show", "true");
                        window.clearTimeout(toast._t);
                        toast._t = window.setTimeout(() => {
                            toast.removeAttribute("data-show");
                        }, 2200);
                    },
                    { passive: false },
                );
            }
        }

        const all = document.querySelectorAll(".dl-wrap");
        all.forEach(boot);
    })();
</script>
