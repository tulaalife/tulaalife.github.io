---
export interface Props {
    headline?: string;
    subline?: string;
    iosHref?: string;
    androidHref?: string;
    variant?: "hero" | "footer";
    showLogo?: boolean;
}

const {
    headline = "Tulaa",
    subline = "Expert-guided yoga & meditation â€” offline, ad-free, privacy-first.",
    iosHref = "https://apps.apple.com/in/app/tulaa/id6748626498",
    androidHref = "https://play.google.com/store/apps/details?id=life.tulaa",
    variant = "hero",
    showLogo = true,
} = Astro.props;

const isHero = variant === "hero";
---

<section
    class:list={["dl-wrap", isHero ? "dl-hero" : "dl-footer"]}
    aria-label="Download Tulaa"
>
    {
        isHero && showLogo && (
            <img
                class="dl-logo"
                src="https://images.tulaa.life/logo.webp"
                width="72"
                height="72"
                alt=""
            />
        )
    }

    <div class="dl-copy">
        <h2 class="dl-title">{headline}</h2>
        <p class="dl-sub">{subline}</p>

        <ul class="dl-chips" aria-label="App highlights">
            <li>Ad-free</li>
            <li>Offline</li>
            <li>Privacy-first</li>
        </ul>
    </div>

    <div class="dl-buttons">
        <a href={iosHref} target="_blank" rel="noopener">
            <img
                src="https://developer.apple.com/assets/elements/badges/download-on-the-app-store.svg"
                alt="Download on the App Store"
                width="160"
                height="52"
            />
        </a>
        <a href={androidHref} target="_blank" rel="noopener">
            <img
                src="https://upload.wikimedia.org/wikipedia/commons/7/78/Google_Play_Store_badge_EN.svg"
                alt="Get it on Google Play"
                width="160"
                height="52"
            />
        </a>
    </div>
</section>

<style>
    .dl-wrap {
        --r: 22px;
        display: grid;
        place-items: center;
        text-align: center;
        gap: 14px;
        padding: 22px;
        border-radius: var(--r);
        background: linear-gradient(
                180deg,
                color-mix(in srgb, var(--card) 88%, transparent),
                var(--card)
            ),
            radial-gradient(
                120% 120% at 0% 0%,
                color-mix(in srgb, var(--fg) 6%, transparent),
                transparent 60%
            );
        border: 1px solid color-mix(in srgb, var(--ring) 72%, transparent);
        box-shadow: 0 10px 32px color-mix(in srgb, var(--fg) 12%, transparent);
    }
    .dl-hero {
        padding: 28px 22px;
    }
    .dl-footer {
        padding: 16px;
        --r: 18px;
    }

    .dl-logo {
        width: 72px;
        height: 72px;
        border-radius: 18px;
        filter: drop-shadow(0 8px 20px rgba(0, 0, 0, 0.08));
    }

    .dl-title {
        margin: 4px 0 6px;
        font-size: clamp(24px, 3.8vw, 36px);
        letter-spacing: 0.2px;
    }
    .dl-sub {
        margin: 0;
        color: var(--muted);
        font-size: clamp(14px, 2.1vw, 18px);
    }

    .dl-chips {
        display: flex;
        gap: 8px;
        justify-content: center;
        flex-wrap: wrap;
        list-style: none;
        padding: 0;
        margin: 12px 0 2px;
    }
    .dl-chips li {
        padding: 6px 12px;
        border-radius: 999px;
        font-size: 0.92rem;
        color: var(--fg);
        background: color-mix(in srgb, var(--btn) 10%, transparent);
        border: 1px solid color-mix(in srgb, var(--ring) 70%, transparent);
    }

    .dl-buttons {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 10px;
    }

    .dl-btn {
        --h: 52px;
        display: inline-flex;
        align-items: center;
        gap: 12px;
        min-height: var(--h);
        padding: 10px 16px;
        border-radius: 14px;
        font-weight: 700;
        text-decoration: none;
        border: 1px solid color-mix(in srgb, var(--ring) 70%, transparent);
        transition:
            transform 0.2s ease,
            box-shadow 0.25s ease,
            background 0.25s ease,
            border-color 0.25s ease;
    }
    .dl-btn .dl-ico {
        inline-size: 28px;
        block-size: 28px;
        display: grid;
        place-items: center;
        border-radius: 999px;
        background: color-mix(in srgb, var(--fg) 10%, transparent);
    }
    .dl-btn .dl-text {
        display: grid;
        text-align: left;
        line-height: 1;
    }
    .dl-btn .dl-text small {
        opacity: 0.7;
        font-weight: 600;
        font-size: 0.7rem;
    }
    .dl-btn .dl-text strong {
        font-size: 0.95rem;
        letter-spacing: 0.2px;
    }

    .dl-btn--solid {
        background: var(--fg);
        color: var(--bg);
    }
    .dl-btn--ghost {
        background: transparent;
        color: var(--fg);
    }
    .dl-btn--ghost:hover {
        background: color-mix(in srgb, var(--btn) 8%, transparent);
    }

    .dl-btn:hover {
        transform: translateY(-1px);
        box-shadow: 0 10px 26px color-mix(in srgb, var(--fg) 14%, transparent);
    }
    .dl-btn:focus-visible {
        outline: none;
        box-shadow: 0 0 0 3px color-mix(in srgb, var(--btn) 40%, transparent);
    }

    @media (max-width: 420px) {
        .dl-btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<script>
    // @ts-nocheck
    (() => {
        function boot(root) {
            const androidBtn = root.querySelector("a[data-android]");
            const toast = root.querySelector(".dl-toast");
            if (!androidBtn || !toast) return;

            if (androidBtn.getAttribute("data-soon") === "true") {
                androidBtn.addEventListener(
                    "click",
                    (e) => {
                        e.preventDefault();
                        toast.setAttribute("data-show", "true");
                        window.clearTimeout(toast._t);
                        toast._t = window.setTimeout(() => {
                            toast.removeAttribute("data-show");
                        }, 2200);
                    },
                    { passive: false },
                );
            }
        }

        const all = document.querySelectorAll(".dl-wrap");
        all.forEach(boot);
    })();
</script>
