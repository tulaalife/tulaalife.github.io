---
export interface Props {
    headline?: string;
    subline?: string;
    iosHref?: string;
    androidHref?: string;
    variant?: "hero" | "footer";
    showLogo?: boolean;
}
const {
    headline = "Tulaa",
    subline = "Expert-guided yoga & meditation â€” offline, ad-free, privacy-first.",
    iosHref = "https://apps.apple.com/in/app/tulaa/id6748626498",
    androidHref = "https://play.google.com/store/apps/details?id=life.tulaa",
    variant = "hero",
    showLogo = true,
} = Astro.props;

const isHero = variant === "hero";
---

<section
    class:list={["dl", isHero ? "dl--hero" : "dl--footer"]}
    aria-label="Download Tulaa"
>
    {
        isHero && showLogo && (
            <img
                class="dl__logo"
                src="https://images.tulaa.life/logo.webp"
                width="72"
                height="72"
                alt=""
                decoding="async"
            />
        )
    }

    <div class="dl__copy">
        <h2 class="dl__title">{headline}</h2>
        <p class="dl__sub">{subline}</p>

        <ul class="dl__chips" aria-label="App highlights">
            <li>Ad-free</li><li>Offline</li><li>Privacy-first</li>
        </ul>
    </div>

    <div class="dl__buttons" role="group" aria-label="Store links">
        <!-- App Store -->
        <a
            class="btn-ios"
            href={iosHref}
            target="_blank"
            rel="noopener"
            aria-label="Download on the App Store"
        >
            <img
                class="storeBadge"
                src="https://developer.apple.com/assets/elements/badges/download-on-the-app-store.svg"
                alt="Download on the App Store"
                loading="lazy"
                decoding="async"
            />
        </a>

        <!-- Google Play -->
        <a
            class="btn-android"
            href={androidHref}
            target="_blank"
            rel="noopener"
            aria-label="Get it on Google Play"
        >
            <img
                class="storeBadge"
                src="https://upload.wikimedia.org/wikipedia/commons/7/78/Google_Play_Store_badge_EN.svg"
                alt="Get it on Google Play"
                loading="lazy"
                decoding="async"
            />
        </a>
    </div>
</section>

<style>
    .dl {
        --r: 24px;
        --padY: 28px;
        --padX: 22px;
        --badge-h: 56px;
        position: relative;
        display: grid;
        place-items: center;
        text-align: center;
        gap: 14px;
        padding: var(--padY) var(--padX);
        border-radius: var(--r);
        background: linear-gradient(
            180deg,
            color-mix(in oklch, var(--card), white 6%),
            var(--card)
        );
        border: 1px solid color-mix(in oklch, var(--ring), transparent 30%);
        /* drop shadow only (removed inset culprit) */
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.06);
        isolation: isolate;
        overflow: hidden;
    }
    .dl--footer {
        --r: 18px;
        --padY: 18px;
        --badge-h: 52px;
    }

    .dl__logo {
        width: 72px;
        height: 72px;
        border-radius: 18px;
        filter: drop-shadow(0 8px 18px rgba(0, 0, 0, 0.08));
    }

    .dl__title {
        margin: 4px 0 6px;
        font-size: clamp(26px, 3.9vw, 42px);
        letter-spacing: 0.2px;
    }
    .dl__sub {
        margin: 0;
        color: var(--muted);
        font-size: clamp(14px, 2.05vw, 18px);
    }

    .dl__chips {
        display: flex;
        gap: 8px;
        justify-content: center;
        flex-wrap: wrap;
        list-style: none;
        padding: 0;
        margin: 12px 0 2px;
    }
    .dl__chips li {
        padding: 7px 12px;
        border-radius: 999px;
        font-size: 0.94rem;
        color: var(--fg);
        background: linear-gradient(
            180deg,
            color-mix(in oklch, var(--card), white 8%),
            color-mix(in oklch, var(--card), transparent 6%)
        );
        border: 1px solid color-mix(in oklch, var(--ring), transparent 20%);
        box-shadow: 0 1px 0 rgba(255, 255, 255, 0.6) inset;
    }

    .dl__buttons {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 10px;
    }
    .dl__buttons a {
        display: flex;
        align-items: center;
    }
    /* same visual height for both badges, width auto for aspect ratio */
    .storeBadge {
        height: var(--badge-h);
        width: auto;
        transition:
            transform 0.16s ease,
            filter 0.16s ease;
        filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.06));
        border-radius: 12px;
    }
    .storeBadge:hover {
        transform: translateY(-1px);
        filter: drop-shadow(0 10px 22px rgba(0, 0, 0, 0.1));
    }

    /* platform-aware order */
    .btn-ios {
        order: 1;
    }
    .btn-android {
        order: 2;
    }
    .dl.is-android .btn-android {
        order: 1;
    }
    .dl.is-android .btn-ios {
        order: 2;
    }

    @media (prefers-reduced-motion: reduce) {
        .storeBadge {
            transition: none;
        }
        .dl::before {
            filter: none;
        }
    }
    @media (max-width: 420px) {
        .dl__buttons {
            gap: 10px;
        }
    }
</style>

<script is:inline>
    // Set platform class to swap button order
    (() => {
        const ua = navigator.userAgent || "";
        const isiOS =
            /iPhone|iPad|iPod/.test(ua) ||
            (/Macintosh/.test(ua) && "ontouchend" in document);
        const isAndroid = /Android/.test(ua);
        document.querySelectorAll(".dl").forEach((el) => {
            if (isAndroid) el.classList.add("is-android");
            else if (isiOS) el.classList.add("is-ios");
        });
    })();
</script>
